{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
            "title_classes": "text-2xl tracking-wider col-span-6"
          }
        },
        "subtitle": {
          "type": "text",
          "disabled": true,
          "settings": {
            "text": "{{ product.metafields.custom_fields.short_description.value }}",
            "text_classes": "col-span-6"
          }
        },
        "price": {
          "type": "price",
          "settings": {
            "price_classes": "col-span-2 text-lg"
          }
        },
        "6a44c417-fd63-4240-a103-3540393f4f89": {
          "type": "rating",
          "settings": {
            "rating_classes": "col-span-4 ml-auto"
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button",
            "variant_classes": "col-span-6 mb-2"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
            "qty_classes": "col-span-2 mr-2"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "atc_classes": "col-span-4"
          }
        }
      },
      "block_order": [
        "title",
        "subtitle",
        "price",
        "6a44c417-fd63-4240-a103-3540393f4f89",
        "variant_picker",
        "quantity_selector",
        "buy_buttons"
      ],
      "settings": {
        "enable_sticky_info": true,
        "product_info_classes": "grid grid-cols-6"
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "show_secondary_image": false
      }
    }
  },
  "order": [
    "main",
    "product-recommendations"
  ]
}
