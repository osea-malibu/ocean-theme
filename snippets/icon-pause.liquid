{% comment %}
  Accepts:
  - classes: {String} string of TailwindCSS classnames
  - stroke_width: {Number} SVG stroke line thickness. Default: 1 (optional)
  - aria_hidden: {Boolean} adds the aria-hidden property. Default: false (optional)

  Usage:
  {% render 'icon-pause', classes: 'w-10 h-10 text-seaweed-700' %}
{% endcomment %}

<svg{% if aria_hidden %} aria-hidden="true" focusable="false"{% endif %} class="{{ classes }}" viewBox="0 0 24 24" fill="currentColor" stroke="none" stroke-width="{{ stroke_width }}" stroke-linecap="round" stroke-linejoin="round">
  <rect x="6" y="4" width="4" height="16"></rect>
  <rect x="14" y="4" width="4" height="16"></rect>
</svg>
