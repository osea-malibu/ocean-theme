{%- liquid
  assign quiz_id = collection.metafields.custom.cartful_quiz_id
  assign flow_id = collection.metafields.custom.cartful_flow_id

  if quiz_id != blank and flow_id != blank
    assign has_ids = true
  else
    assign has_ids = false
  endif
-%}
{%- if has_ids -%}
  <script>
    (function(c,a,r,t,f,u,l){
      l=document.createElement(r);
      l.id=a+"scr";
      l.src=f;
      l.setAttribute("quizId",c);
      l.setAttribute("flowId",a);
      l.setAttribute("target",u);
      document[t].appendChild(l);
    })(
      "{{ quiz_id | escape }}",
      "{{ flow_id | escape }}",
      "script",
      "body",
      "https://studio-assets.cartfulsolutions.com/embed/studio.js",
      "embed"
    );
  </script>
{%- endif -%}
