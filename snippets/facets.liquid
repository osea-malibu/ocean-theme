{% comment %}
  Renders facets (filtering and sorting)

  Accepts:
  - results: {Object} Collection or Search object
  - enable_filtering: {Boolean} Show filtering when true
  - enable_sorting: {Boolean} Show sorting when true
  - filter_type_mobile: {String} 'inline' or 'drawer' style for mobile
  - filter_type_desktop: {String} 'inline' or 'drawer' style for desktop
  - paginate: {Object}

  Usage:
  {% render 'facets', results: collection, enable_filtering: true, enable_sorting: true, paginate: paginate %}
{% endcomment %}

{%- liquid
  assign sort_by = results.sort_by | default: results.default_sort_by
  assign total_active_values = 0
  if results.url
    assign results_url = results.url
  else
    assign terms = results.terms | escape
    assign results_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
  endif
-%}

<div class="relative mb-4">
  {% comment %} Count {% endcomment %}
  <div class="product-count pb-5 pt-1 flex items-center gap-1" role="status">
    <h2 class="text-sm">
      <span id="ProductCount" class="transition-opacity">
        {%- if results.results_count -%}
          {{ 'templates.search.results_with_count' | t: terms: results.terms, count: results.results_count }}
        {%- elsif results.products_count == results.all_products_count -%}
          {{ 'products.facets.product_count_simple' | t: count: results.products_count }}
        {%- else -%}
          {{
            'products.facets.product_count'
            | t: product_count: results.products_count, count: results.all_products_count
          }}
        {%- endif -%}
      </span>
    </h2>
    {%- render 'loading-spinner', classes: 'w-4 h-4 text-seaweed-700' -%}
  </div>
  
  {%- if filter_type_mobile == 'inline' and filter_type_desktop == 'inline' -%}
    {% comment %}  Inline filter {% endcomment %}
    <facet-filters-form class="inline-facets facets transition-opacity{% if filter_type_mobile == 'drawer' %} hidden sm:block{% endif %}">
      <form id="FacetFiltersForm">
        {%- if results.terms -%}
          <input type="hidden" name="q" value="{{ results.terms | escape }}">
          <input name="options[prefix]" type="hidden" value="last">
        {%- endif -%}

        {% comment %} Sorting {% endcomment %}
        {%- if enable_sorting -%}
          <div class="sorting absolute right-0 top-0">
            <div class="flex items-center gap-1">
              <label for="SortBy" class="text-sm font-medium">Sort:</label>
              <div class="select">
                {%- assign sort_by = results.sort_by | default: results.default_sort_by -%}
                <select
                  name="sort_by"
                  class="input input-sm"
                  id="SortBy"
                  aria-describedby="a11y-refresh-page-message"
                >
                  {%- for option in results.sort_options -%}
                    <option
                      value="{{ option.value | escape }}"
                      {% if option.value == sort_by %}
                        selected="selected"
                      {% endif %}
                    >
                      {{- option.name | escape -}}
                    </option>
                  {%- endfor -%}
                </select>
              </div>
            </div>
          </div>
        {%- endif -%}

        {% if enable_filtering %}
          {% comment %} Heading is the first tabbable element on filter type inline {% endcomment %}
          <div id="FacetsWrapperInline" class="flex items-center gap-2 overflow-x-scroll pb-2 relative">
            {%- if results.filters != empty -%}
              <h2 class="font-medium sr-only" id="verticalTitle" tabindex="-1">
                {{- 'products.facets.filter_by_label' | t -}}
              </h2>
            {%- endif -%}

            {% comment %} Filters {% endcomment %}
            {%- for filter in results.filters -%}
              {%- assign total_active_values = total_active_values | plus: filter.active_values.size -%}

              {%- if filter.label == 'Skin Type' -%}
                <div id="Facet-{{ forloop.index }}-{{ section.id }}">
                  <fieldset class="facets-wrap">
                    <legend class="sr-only">{{ filter.label | escape }}</legend>
                    {%- liquid
                      assign sorted_values = filter.values
                      # Keep the selected values grouped together when operator is AND
                      if filter.operator == 'AND'
                        assign active_filter_values = filter.values | where: 'active', true
                        assign inactive_filter_values = filter.values | where: 'active', false
                        assign sorted_values = active_filter_values | concat: inactive_filter_values
                      endif
                    -%}
                    <ul role="list" class="flex gap-1.5 active-facets">
                      {%- for value in sorted_values -%}
                        {% liquid
                          assign input_id = 'Filter-' | append: filter.param_name | escape | append: '-' | append: forloop.index
                          assign is_disabled = false
                          if value.count == 0 and value.active == false
                            assign is_disabled = true
                          endif
                        %}
                        <li class="relative flex {% if value.active %}order-{{ forloop.index }}{% else %}order-{{ forloop.index | plus: sorted_values.size }}{% endif %}">
                          <input
                            type="checkbox"
                            name="{{ value.param_name }}"
                            value="{{ value.value }}"
                            id="{{ input_id }}"
                            class="peer absolute w-px h-px opacity-0"
                            {% if value.active %}
                              checked
                            {% endif %}
                            {% if is_disabled %}
                              disabled
                            {% endif %}
                          >
                          <label for="{{ input_id }}" class="border border-seaweed-700 rounded-full pl-2 pr-0.5 peer-checked:bg-neon-green/50 peer-checked:small:max-w-4 transition-colors{% if is_disabled %} disabled{% endif %}{% if value.active %} active{% endif %}">
                            <span aria-hidden="true" class="flex items-center gap-1 whitespace-nowrap">
                              <span class="text-sm font-book">{{ value.label | escape }}</span>
                              <small class="min-w-4 h-4 px-1 bg-wave-300 font-bold text-xs rounded-full text-center leading-4 overflow-hidden max-w-6 transition-max-width">{{ value.count }}</small>
                            </span>
                            <span class="sr-only">
                              {{- value.label | escape }} (
                              {%- if value.count == 1 -%}
                                {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                              {%- else -%}
                                {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                              {%- endif -%}
                              )
                            </span>
                          </label>
                          <div class="pointer-events-none absolute right-0.5 top-0.5 p-px opacity-0 peer-checked:opacity-100 transition-opacity">
                            <div class="bg-white rounded-full w-4 h-4">
                              {% render 'icon-close', aria_hidden: true, classes: 'w-4 h-4', stroke_width: 2 %}
                            </div>
                          </div>
                        </li>
                      {%- endfor -%}
                      {% comment %} <li>
                        <facet-remove class="flex items-center">
                          <a href="{{ results_url }}" class="link text-xs font-book p-1 block">
                            <span>{{ 'products.facets.clear_all' | t }}</span>
                          </a>
                        </facet-remove>
                      </li> {% endcomment %}
                    </ul>
                  </fieldset>
                </div>
              {%- else -%}
                <details
                  id="Details-{{ filter.param_name | escape }}-{{ section.id }}"
                  class="disclosure-has-popup facets__disclosure js-filter"
                  data-index="{{ forloop.index }}"
                >
                  <summary
                    class="facets__summary flex justify-between items-center gap-1 border border-seaweed-400 rounded pl-1.5 pr-1 py-0.5"
                    aria-label="{{ filter.label | escape }} ({{ 'products.facets.filters_selected.one' | t: count: filter.active_values.size }})"
                  >
                    <span class="leading-none text-sm font-book">{{ filter.label | escape }}</span>
                    {% render 'icon-chevron', aria_hidden: true, classes: 'w-4 h-4 -rotate-90 -mb-px', stroke_width: 2 %}
                  </summary>
                  {% case filter.type %}
                    {% when 'boolean', 'list' %}
                      <script>console.log("filters", {{ filter.label }}, {{ filter.param_name }})</script>
                      <div
                        id="Facet-{{ forloop.index }}-{{ section.id }}"
                        class="absolute z-10 bg-white border border-seaweed-400 rounded p-2"
                      >
                        <div class="flex justify-between items-center">
                          <span class="font-medium">
                            {{- 'products.facets.filters_selected' | t: count: filter.active_values.size -}}
                          </span>
                          <facet-remove>
                            <a href="{{ filter.url_to_remove }}" class="link underlined-link">
                              {{ 'products.facets.reset' | t }}
                            </a>
                          </facet-remove>
                        </div>
                        <fieldset class="facets-wrap">
                          <legend class="sr-only">{{ filter.label | escape }}</legend>
                          {%- liquid
                            assign sorted_values = filter.values
                            # Keep the selected values grouped together when operator is AND
                            if filter.operator == 'AND'
                              assign active_filter_values = filter.values | where: 'active', true
                              assign inactive_filter_values = filter.values | where: 'active', false
                              assign sorted_values = active_filter_values | concat: inactive_filter_values
                            endif
                          -%}
                          <ul role="list">
                            {%- for value in sorted_values -%}
                              {% liquid
                                assign input_id = 'Filter-' | append: filter.param_name | escape | append: '-' | append: forloop.index
                                assign is_disabled = false
                                if value.count == 0 and value.active == false
                                  assign is_disabled = true
                                endif
                              %}

                              {%- capture text_value -%}
                                <span aria-hidden="true">
                                  <span>{{- value.label | escape }}</span> ({{- value.count -}})
                                </span>
                                <span class="sr-only">
                                  {{- value.label | escape }} (
                                  {%- if value.count == 1 -%}
                                    {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                  {%- else -%}
                                    {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                  {%- endif -%}
                                  )
                                </span>
                              {%- endcapture -%}

                              <li>
                                <label for="{{ input_id }}" class="{% if is_disabled %}pointer-events-none opacity-50{% endif %}{% if value.active %} active{% endif %}">
                                  <input
                                    type="checkbox"
                                    name="{{ value.param_name }}"
                                    value="{{ value.value }}"
                                    id="{{ input_id }}"
                                    {% if value.active %}
                                      checked
                                    {% endif %}
                                    {% if is_disabled %}
                                      disabled
                                    {% endif %}
                                  >
                                  <svg
                                    width="1.6rem"
                                    height="1.6rem"
                                    viewBox="0 0 16 16"
                                    aria-hidden="true"
                                    focusable="false"
                                  >
                                    <rect width="16" height="16" stroke="currentColor" fill="none" stroke-width="1"></rect>
                                  </svg>
                                  <svg
                                    aria-hidden="true"
                                    class="icon icon-checkmark"
                                    width="1.1rem"
                                    height="0.7rem"
                                    viewBox="0 0 11 7"
                                    fill="none"
                                    xmlns="http://www.w3.org/2000/svg"
                                  >
                                    <path d="M1.5 3.5L2.83333 4.75L4.16667 6L9.5 1"
                                      stroke="currentColor"
                                      stroke-width="1.75"
                                      stroke-linecap="round"
                                      stroke-linejoin="round" />
                                  </svg>
                                  {{ text_value }}
                                </label>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </fieldset>
                      </div>
                    {% when 'price_range' %}
                      <div
                        id="Facet-{{ forloop.index }}-{{ section.id }}"
                        class="absolute z-10 bg-white border border-seaweed-400 rounded p-2"
                      >
                        <div class="flex justify-between items-center">
                          {%- assign max_price_amount = filter.range_max | money | strip_html | escape -%}
                          <span class="font-medium">
                            {{- 'products.facets.max_price' | t: price: max_price_amount -}}
                          </span>
                          <facet-remove>
                            <a href="{{ filter.url_to_remove }}" class="link underlined-link">
                              {{ 'products.facets.reset' | t }}
                            </a>
                          </facet-remove>
                        </div>
                        <price-range>
                          {% render 'price-facet', filter: filter, id_prefix: 'Filter-' %}
                        </price-range>
                      </div>
                  {% endcase %}
                </details>
              {%- endif -%}
            {%- endfor -%}
            <div class="gradient-hide absolute inset-y-0 right-0 w-12 bg-gradient-to-r from-transparent to-white"></div>
          </div>
        {% endif %}

        {% if results.current_vendor or results.current_type %}
          <input type="hidden" name="q" value="{{ results.current_vendor }}{{ results.current_type }}">
        {% endif %}
      </form>
    </facet-filters-form>
  {%- endif -%}

  {%- if filter_type_mobile == 'drawer' or filter_type_desktop == 'drawer' -%}
    {% comment %}  Drawer filter {% endcomment %}
    <menu-drawer
      class="mobile-facets flex ml-0{% if filter_type_desktop == 'inline' %} sm:hidden{% endif %}"
      data-breakpoint="mobile"
    >
      <details class="flex">
        <summary class="inline-block">
          <span class="mobile-facets__open flex items-center gap-2 py-2 w-full font-book">
            {% render 'icon-filter', classes: 'h-4 w-4', aria_hidden: true, stroke_width: 2 %}
            <span class="sm:hidden link">
              {%- if enable_filtering and enable_sorting -%}
                {{ 'products.facets.filter_and_sort' | t }}
              {%- elsif enable_filtering -%}
                {{ 'products.facets.filter_button' | t }}
              {%- elsif enable_sorting -%}
                {{ 'products.facets.sort_button' | t }}
              {%- endif -%}
            </span>
            <span class="hidden sm:block link">
              {%- if enable_filtering -%}
                {{ 'products.facets.filter_button' | t }}
              {%- endif -%}
            </span>
          </span>
        </summary>
        {% comment %} Scrim - closes menu on click {% endcomment %}
        <div class="menu-scrim block fixed inset-x-0 top-[72px] md:top-24 bottom-0 bg-seaweed-800/50 opacity-0 z-10 motion-safe:transition-opacity"></div>
        <facet-filters-form class="menu-drawer fixed z-20 right-0 bottom-0 top-[72px] md:top-24 w-11/12 sm:w-10/12 translate-x-full bg-seafoam-200 overflow-y-auto">
          <form id="FacetFiltersFormMobile">
            <div class="flex flex-col">
              <div class="flex justify-between sticky top-0 z-20 bg-seafoam-200 py-2 px-6">
                <div class="relative flex flex-col pt-2">
                  <h2 class="font-medium text-lg leading-none">
                    {%- if enable_filtering and enable_sorting -%}
                      {{ 'products.facets.filter_and_sort' | t }}
                    {%- elsif enable_filtering -%}
                      {{ 'products.facets.filter_button' | t }}
                    {%- elsif enable_sorting -%}
                      {{ 'products.facets.sort_button' | t }}
                    {%- endif -%}
                  </h2>
                  <p class="mobile-facets__count text-sm leading-tight">
                    {%- if results.results_count -%}
                      {{ 'templates.search.results_with_count' | t: terms: results.terms, count: results.results_count }}
                    {%- elsif results.products_count == results.all_products_count -%}
                      {{ 'products.facets.product_count_simple' | t: count: results.products_count }}
                    {%- else -%}
                      {{
                        'products.facets.product_count'
                        | t: product_count: results.products_count, count: results.all_products_count
                      }}
                    {%- endif -%}
                  </p>
                </div>
                {% render 'icon-close', classes: 'menu-close h-10 w-10 block p-2 -mr-4', aria-hidden: true, stroke_width: 1.75 %}
              </div>
              <div
                id="FacetsWrapperDrawer"
                class="flex flex-col overflow-y-auto grow px-6 pt-4"
              >
                {%- if enable_filtering -%}
                  {%- for filter in results.filters -%}
                    {% case filter.type %}
                      {% when 'boolean', 'list' %}
                        <details
                          id="Details-Mobile-{{ filter.param_name | escape }}-{{ section.id }}"
                          class="mobile-facets__details js-filter group"
                          data-index="mobile-{{ forloop.index }}"
                        >
                          <summary class="flex justify-between py-2">
                            <span>{{ filter.label | escape }}</span>
                            {% render 'icon-arrow', variant: 'long', aria_hidden: true, classes: 'block w-5 h-5', stroke_width: 2 %}
                          </summary>
                          <div
                            id="FacetMobile-{{ forloop.index }}-{{ section.id }}"
                            class="absolute inset-y-0 left-0 w-full z-30 translate-x-full invisible flex flex-col transition-transform-visibility group-open:translate-x-0 group-open:visible bg-sand-200"
                          >
                            <button
                              class="mobile-facets__close-button link flex items-center gap-1"
                              aria-expanded="true"
                              type="button"
                            >
                              {% render 'icon-arrow', variant: 'long', aria_hidden: true, classes: 'w-4 h-4 rotate-180', stroke_width: 2 %}
                              {{ filter.label | escape }}
                            </button>
                            <ul class="mobile-facets__list overflow-y-auto" role="list">
                              {%- liquid
                                assign sorted_values = filter.values
                                # Keep the selected values grouped together when operator is AND
                                if filter.operator == 'AND'
                                  assign active_filter_values = filter.values | where: 'active', true
                                  assign inactive_filter_values = filter.values | where: 'active', false
                                  assign sorted_values = active_filter_values | concat: inactive_filter_values
                                endif
                              -%}
                              {%- for value in sorted_values -%}
                                {% liquid
                                  assign input_id = 'Filter-' | append: filter.param_name | escape | append: '-mobile-' | append: forloop.index
                                  assign is_disabled = false
                                  if value.count == 0 and value.active == false
                                    assign is_disabled = true
                                  endif
                                %}

                                {%- capture text_value -%}
                                  <span aria-hidden="true">
                                    <span>{{- value.label | escape }}</span> ({{- value.count -}})
                                  </span>
                                  <span class="sr-only">
                                    {{- value.label | escape }} (
                                    {%- if value.count == '1' -%}
                                      {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                    {%- else -%}
                                      {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                    {%- endif -%}
                                    )
                                  </span>
                                {%- endcapture -%}

                                <li class="mobile-facets__item">
                                  <label for="{{ input_id }}" class="mobile-facets__label{% if is_disabled %} pointer-events-none opacity-50{% endif %}{% if value.active %} active{% endif %}">
                                    <input
                                      class="mobile-facets__checkbox"
                                      type="checkbox"
                                      name="{{ value.param_name }}"
                                      value="{{ value.value }}"
                                      id="{{ input_id }}"
                                      {% if value.active %}
                                        checked
                                      {% endif %}
                                      {% if is_disabled %}
                                        disabled
                                      {% endif %}
                                    >
                                    <span class="mobile-facets__highlight"></span>
                                    <svg
                                      width="1.6rem"
                                      height="1.6rem"
                                      viewBox="0 0 16 16"
                                      aria-hidden="true"
                                      focusable="false"
                                    >
                                      <rect width="16" height="16" stroke="currentColor" fill="none" stroke-width="1"></rect>
                                    </svg>

                                    <svg
                                      aria-hidden="true"
                                      class="icon icon-checkmark"
                                      width="1.1rem"
                                      height="0.7rem"
                                      viewBox="0 0 11 7"
                                      fill="none"
                                      xmlns="http://www.w3.org/2000/svg"
                                    >
                                      <path d="M1.5 3.5L2.83333 4.75L4.16667 6L9.5 1" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                    {{ text_value }}
                                  </label>
                                </li>
                              {%- endfor -%}
                            </ul>

                            <div class="mobile-facets__footer gradient">
                              <facet-remove class="mobile-facets__clear-wrapper">
                                <a href="{{ filter.url_to_remove }}" class="mobile-facets__clear underlined-link">
                                  {{- 'products.facets.clear' | t -}}
                                </a>
                              </facet-remove>
                              <button
                                type="button"
                                class="button button--primary"
                                onclick="this.closest('.mobile-facets').querySelector('summary').click()"
                              >
                                {{ 'products.facets.apply' | t }}
                              </button>
                            </div>
                          </div>
                        </details>
                      {% when 'price_range' %}
                        <details
                          id="Details-Mobile-{{ filter.param_name | escape }}-{{ section.id }}"
                          class="mobile-facets__details js-filter group"
                          data-index="mobile-{{ forloop.index }}"
                        >
                          <summary class="flex justify-between py-2">
                            <span>{{ filter.label | escape }}</span>
                            {% render 'icon-arrow', variant: 'long', aria_hidden: true, classes: 'block w-5 h-5', stroke_width: 2 %}
                          </summary>
                          <div
                            id="FacetMobile-{{ forloop.index }}-{{ section.id }}"
                            class="absolute inset-y-0 left-0 w-full z-30 translate-x-full invisible flex flex-col transition-transform-visibility group-open:translate-0 group-open:visible bg-sand-200 gradient"
                          >
                            <button
                              class="mobile-facets__close-button link flex items-center gap-1"
                              aria-expanded="true"
                              type="button"
                            >
                              {% render 'icon-arrow', variant: 'long', aria_hidden: true, classes: 'w-4 h-4 rotate-180', stroke_width: 2 %}
                              {{ filter.label | escape }}
                            </button>

                            {%- assign max_price_amount = filter.range_max | money | strip_html | escape -%}
                            <p class="mobile-facets__info">
                              {{ 'products.facets.max_price' | t: price: max_price_amount }}
                            </p>

                            <price-range>
                              {% render 'price-facet', filter: filter, id_prefix: 'Mobile-Filter-' %}
                            </price-range>
                            <div class="mobile-facets__footer">
                              <facet-remove class="mobile-facets__clear-wrapper">
                                <a href="{{ filter.url_to_remove }}" class="mobile-facets__clear underlined-link">
                                  {{- 'products.facets.clear' | t -}}
                                </a>
                              </facet-remove>
                              <button
                                type="button"
                                class="button button--primary"
                                onclick="this.closest('.mobile-facets').querySelector('summary').click()"
                              >
                                {{ 'products.facets.apply' | t }}
                              </button>
                            </div>
                          </div>
                        </details>
                    {% endcase %}
                  {%- endfor -%}
                {%- endif -%}

                {%- if enable_sorting -%}
                  <div
                    id="Details-Mobile-SortBy-{{ section.id }}"
                    class="mobile-facets__details js-filter"
                    data-index="mobile-{{ forloop.index }}"
                  >
                    <div class="">
                      <div class="mobile-facets__sort">
                        <label for="SortBy-mobile">{{ 'products.facets.sort_by_label' | t }}</label>
                        <div class="select">
                          <select
                            name="sort_by"
                            id="SortBy-mobile"
                            aria-describedby="a11y-refresh-page-message"
                          >
                            {%- for option in results.sort_options -%}
                              <option
                                value="{{ option.value | escape }}"
                                {% if option.value == sort_by %}
                                  selected="selected"
                                {% endif %}
                              >
                                {{ option.name | escape }}
                              </option>
                            {%- endfor -%}
                          </select>
                          {% render 'icon-caret', aria_hidden: true, classes: 'w-4 h-4' %}
                        </div>
                      </div>
                    </div>
                  </div>
                {%- endif -%}

                <div class="mobile-facets__footer">
                  <facet-remove class="mobile-facets__clear-wrapper">
                    <a href="{{ results_url }}" class="mobile-facets__clear underlined-link">
                      {{- 'products.facets.clear_all' | t -}}
                    </a>
                  </facet-remove>
                  <button
                    type="button"
                    class="button button--primary"
                    onclick="this.closest('.mobile-facets').querySelector('summary').click()"
                  >
                    {{ 'products.facets.apply' | t }}
                  </button>
                </div>
              </div>

              {% if results.current_vendor or results.current_type %}
                <input type="hidden" name="q" value="{{ results.current_vendor }}{{ results.current_type }}">
              {% endif %}

              {%- if results.terms -%}
                <input type="hidden" name="q" value="{{ results.terms | escape }}">
                <input name="options[prefix]" type="hidden" value="last">
              {%- endif -%}
            </div>
          </form>
        </facet-filters-form>
      </details>
    </menu-drawer>
  {%- endif -%}

  {% comment %} Active facet pills {% endcomment %}
  {% comment %} <div class="flex flex-wrap w-full active-facets">
    {%- for filter in results.filters -%}
      {%- unless filter.label == 'Skin Type' -%}
        {%- for value in filter.active_values -%}
          <facet-remove>
            <a href="{{ value.url_to_remove }}" class="block p-1">
              <span class="button button-xs button-tertiary normal-case tracking-wide rounded-full pr-2">
                <span class="sr-only">{{ filter.label | escape }}: </span>{{ value.label | escape }}
                {% render 'icon-close', stroke_width: 2, aria_hidden: true, classes: 'w-4 h-4 self-center shrink-0 pointer-events-none' %}
                <span class="sr-only">{{ 'products.facets.clear_filter' | t }}</span>
              </span>
            </a>
          </facet-remove>
        {%- endfor -%}
      {%- endunless -%}

      {%- if filter.type == 'price_range' -%}
        {% assign min = filter.min_value.value %}
        {% assign max = filter.max_value.value %}
        {%- if min != null or max != null -%}
          <facet-remove>
            <a href="{{ filter.url_to_remove }}" class="block p-1">
              <span class="button button-xs button-tertiary normal-case tracking-wide rounded-full pr-2">
                {{ min | default: 0 | money }} - {{ max | default: filter.range_max | money }}
                {% render 'icon-close', stroke_width: 2, aria_hidden: true, classes: 'w-4 h-4 self-center shrink-0 pointer-events-none' %}
                <span class="sr-only">{{ 'products.facets.clear_filter' | t }}</span>
              </span>
            </a>
          </facet-remove>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
    <facet-remove class="flex items-center">
      <a href="{{ results_url }}" class="link text-xs font-book p-1 block">
        <span>{{ 'products.facets.clear_all' | t }}</span>
      </a>
    </facet-remove>
  </div> {% endcomment %}
</div>
