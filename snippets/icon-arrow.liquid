{% comment %}
    Accepts:
    - variant: {String} Options: 'short' | 'long' - name of icon (required)
    - classes: {String} string of TailwindCSS classnames
    - stroke_width: {Number} SVG stroke line thickness. Default: 1 (optional)
    - aria_hidden: {Boolean} adds the aria-hidden property. Default: false (optional)

    Usage:
    {% render 'icon-arrow', classes: 'w-10 h-10 text-seaweed-700' %}
{% endcomment %}

{%- if variant != nil -%}
<svg{% if aria_hidden %} aria-hidden="true" focusable="false"{% endif %} class="{{ classes }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ stroke_width }}" stroke-linecap="round" stroke-linejoin="round">
  <path stroke="none" d="M0 0h24v24H0z"></path>
  {%- case variant -%}
    {%- when 'short' -%}
      <line x1="5" y1="12" x2="19" y2="12"></line>
      <line x1="13" y1="18" x2="19" y2="12"></line>
      <line x1="13" y1="6" x2="19" y2="12"></line>
    {%- when 'long' -%}
      <line x1="5" y1="12" x2="19" y2="12"></line>
      <line x1="15" y1="16" x2="19" y2="12"></line>
      <line x1="15" y1="8" x2="19" y2="12"></line>
  {% endcase %}
</svg>
{%- endif -%}