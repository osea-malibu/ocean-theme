<modal-dialog id="GwpUrlModal">
  <div role="dialog" aria-label="Your free gift will be added when you meet the ${{ settings.gwp_tier1_threshold }} threshold" aria-modal="true" tabindex="-1">
    <button id="ModalClose-GwpUrlModal" type="button" aria-label="{{ 'accessibility.close' | t }}">
      {%- render 'icon-close', classes: 'w-8 h-8', stroke_width: 1, aria_hidden: true -%}
    </button>
    <div class="w-full">
      <h1 class="font-serif text-3xl tracking-tight mb-2">Your gift will be added to your cart when you reach ${{ settings.gwp_tier1_threshold }}!</h1>
      <p class="mb-4">Start shopping to redeem your gift. No code required.</p>
      <button class="button button-primary close-modal" aria-label="Close this modal and start shopping">Start shopping</button>
    </div>
  </div>
</modal-dialog>