    <div class="flex-1 flex justify-end items-center">
      {% comment %} Accounts link {% endcomment %}   
      {%- if shop.customer_accounts_enabled -%}
        <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="h-10 w-10 justify-center items-center ml-1 flex md:ml-4">
          {%- render 'icon-account', classes: 'h-8 w-8 hover:text-seaweed-500', aria_hidden: true, stroke_width: 1.5 -%}
          <span class="sr-only">
            {%- liquid
              if customer
                echo 'customer.account_fallback' | t
              else
                echo 'customer.log_in' | t
              endif
            -%}
          </span>
        </a>
      {%- endif -%}

      {% comment %} Cart menu {% endcomment %}
      <a href="{{ routes.cart_url }}" class="header__icon--cart cursor-pointer flex w-10 h-10 justify-center items-center ml-1 md:ml-4 -mr-1" id="cart-icon-bubble">
        <span class="sr-only">Cart</span>
        <div class="w-8 h-8 bg-seafoam-300 rounded-full flex justify-center items-center">
          <span aria-hidden="true" class="leading-8 font-book text-lg">{{ cart.item_count }}</span>
          <span class="hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
