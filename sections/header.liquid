<link rel="stylesheet" href="{{ 'component-search.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-cart-notification.css' | asset_url }}" media="print" onload="this.media='all'">
{%- if settings.predictive_search_enabled -%}
  <link rel="stylesheet" href="{{ 'component-loading-overlay.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}

<noscript>{{ 'component-search.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-cart-notification.css' | asset_url | stylesheet_tag }}</noscript>

<script src="{{ 'details-disclosure.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'details-modal.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>
{%- if settings.cart_type == "drawer" -%}
  <script src="{{ 'cart-drawer.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<header class="header container px-0 relative">
  <div class="px-6 py-2 flex items-center justify-between">
    <div class="flex-1 flex items-center justify-start">
      {% comment %} Hamburger menu {% endcomment %}
      {%- if section.settings.hamburger_menu != blank -%}
        {%- assign menu_link_styles = 'px-8 py-3 text-xl tracking-wide font-regular cursor-pointer' -%}
        <menu-drawer class="mr-1 md:mr-4 block{% unless section.settings.enable_navbar %} lg:hidden{% endunless %}">
          <details id="Details-menu-drawer-container" class="group">
            {% comment %} Hamburger icon {% endcomment %}
            <summary class="header__icon--menu cursor-pointer w-10 h-10 -ml-1 hover:text-seaweed-500" aria-label="{{ 'sections.header.menu' | t }}">
              <span class="flex items-center justify-center h-full">
                {% render 'icon-hamburger', classes: 'icon-hamburger h-8 w-8 block absolute opacity-100 motion-safe:transition-transform-opacity scale-100 group-open:invisible group-open:opacity-0 group-open:scale-75', aria_hidden: true, stroke_width: 1.5 %}
                {% comment %} Close icon - replaces hamburger when drawer is open {% endcomment %}
                {% render 'icon-close', classes: 'icon-close h-8 w-8 block absolute opacity-100 motion-safe:transition-transform-opacity scale-100 invisible group-open:visible opacity-0 group-open:opacity-100 scale-75 group-open:scale-100', aria-hidden: true, stroke_width: 1.5 %}
              </span>
            </summary>
            {% comment %} Scrim - closes menu on click {% endcomment %}
            <div class="menu-scrim block fixed inset-x-0 top-24 bottom-0 bg-seaweed-800/50 opacity-0 z-10 motion-safe:transition-opacity"></div>
            {% comment %} L1 Drawer {% endcomment %}
            <div class="menu-drawer fixed invisible z-20 left-0 bottom-0 overflow-x-hidden w-11/12 sm:w-10/12 -translate-x-full bg-seafoam-200 top-24 overyflow-y-auto" tabindex="-1">
              <div class="relative flex flex-col h-full">
                <nav class="pt-8 pb-6">
                  <ul role="list">
                    {%- for link in section.settings.hamburger_menu.links -%}
                      <li>
                        {% comment %} Convert link with title 'Divider' into divider {% endcomment %}
                        {%- if link.title == 'Divider' -%}
                          <hr class="ml-8 my-4 w-8 border-seaweed-500" />
                        {% comment %} Convert link with title 'Accordion' into accordion {% endcomment %}
                        {%- elsif link.title contains 'Accordion' -%}
                          <details>
                            <summary class="flex items-center justify-start {{ menu_link_styles }}">
                              <span class="mr-2">{{ link.title | replace: 'Accordion - ', '' }}</span>
                              <div class="w-6 h-6 flex items-center justify-center">
                                <svg class="absolute icon-expand h-5 w-5 motion-safe:transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                  <line x1="12" y1="5" x2="12" y2="19" />
                                  <line x1="5" y1="12" x2="19" y2="12" />
                                </svg>
                                <svg class="absolute icon-collapse h-5 w-5 motion-safe:transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                  <line x1="5" y1="12" x2="19" y2="12" />
                                </svg>
                              </div>
                            </summary>
                            <ul class="px-8 pb-2">
                              {%- for childlink in link.links -%}
                                <li><a class="py-2 px-2 block tracking-wide" href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
                              {%- endfor -%}
                            </ul>
                          </details>
                        {% comment %} L1 - Link with sub menu {% endcomment %}
                        {%- elsif link.links != blank -%}
                          <details id="Details-menu-drawer-menu-item-{{ forloop.index }}">
                            <summary class="flex items-center {{ menu_link_styles }}{% if link.child_active %} text-seaweed-800{% endif %}">
                              <span class="mr-3">{{ link.title | escape }}</span>
                              {% render 'icon-arrow', variant: 'short', aria_hidden: true, classes: 'h-6 w-6', stroke_width: '1.5' %}
                            </summary>
                            {% comment %} L2 Drawer {% endcomment %}
                            <div id="link-{{ link.title | escape }}" class="menu-submenu translate-x-full invisible absolute inset-0 overflow-y-auto bg-sand-200 z-10 {% if link.levels > 1 %}h-auto{% else %}h-full{% endif %}" tabindex="-1">
                              <div class="pb-10">
                                {% comment %} Back button {% endcomment %}
                                <button class="submenu-close flex items-center px-8 pt-6 pb-2 w-full text-sm leading-6 font-bold uppercase tracking-wider" aria-expanded="true">
                                  {% render 'icon-arrow', variant: 'long', aria_hidden: true, classes: 'h-6 w-6 rotate-180 mr-2', stroke_width: '1.5' %}
                                  Back
                                </button>
                                <ul role="list" tabindex="-1">
                                  {%- for childlink in link.links -%}
                                    <li>
                                      {% comment %} Convert childlinklink with title 'PromoBlock' into promo block {% endcomment %}
                                      {%- if childlink.title == 'PromoBlock' -%}
                                        <figure class="shrink-0 tracking-wide px-8 mt-6">
                                          {%- if section.settings.promo_image != nil -%}
                                            {%- if section.settings.promo_link != nil -%}<a href="{{ section.settings.promo_link.url }}">{%- endif -%}
                                              <img
                                                srcset="{{ section.settings.promo_image | image_url: width: 250 }} 1x, {{ section.settings.promo_image | image_url: width: 500 }} 2x"
                                                src="{{ section.settings.promo_image | image_url: width: 250 }}"
                                                width="250"
                                                height="{{ 250 | divided_by: section.settings.promo_image.aspect_ratio }}"
                                                alt="{{ section.settings.promo_heading }}"
                                                loading="lazy"
                                                class="mb-2"
                                              >
                                            {%- if section.settings.promo_link != nil -%}</a>{%- endif -%}
                                          {%- endif -%}
                                          <figcaption>
                                            {%- if section.settings.promo_heading != blank -%}
                                              <h3 class="text-xl font-medium">{{ section.settings.promo_heading }}</h3>
                                            {%- endif -%}
                                            {%- if section.settings.promo_paragraph != blank -%}
                                              {{ section.settings.promo_paragraph }}
                                            {%- endif -%}
                                            {%- if section.settings.promo_link != nil -%}
                                              <a href="{{ section.settings.promo_link.url }}" class="button button-secondary button-sm mt-2">{{ section.settings.promo_button }}</a>
                                            {%- endif -%}
                                          </figcaption>
                                        </figure>
                                      {% comment %} L2 - Link without sub menu {% endcomment %}
                                      {%- elsif childlink.links == blank -%}
                                        <a href="{{ childlink.url }}" class="block {{ menu_link_styles }}{% if childlink.current %} text-seaweed-800{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                                          {{ childlink.title | escape }}
                                        </a>
                                      {% comment %} L2 - Link with sub menu {% endcomment %}
                                      {%- else -%}
                                        <details class="group" open>
                                          <summary class="flex items-center px-8 mt-3 mb-2">
                                            {% render 'icon-caret', classes: 'w-5 h-5 mr-2 -rotate-90 group-open:rotate-0 motion-safe:transition-transform' %}
                                            <p class="text-2xl tracking-wide cursor-pointer font-medium">
                                              {{ childlink.title | escape }}
                                            </p>
                                          </summary>
                                          {% comment %} L3 menu {% endcomment %}
                                          <ul id="childlink-{{ childlink.title | escape }}" role="list" tabindex="-1" class="mb-6 pl-7">
                                            {%- for grandchildlink in childlink.links -%}
                                              <li>
                                                <a href="{{ grandchildlink.url }}" class="block relative -mt-1 {{ menu_link_styles }}{% if grandchildlink.current %} text-seaweed-800{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                                  {{ grandchildlink.title | escape }}
                                                </a>
                                              </li>
                                            {%- endfor -%}
                                          </ul>
                                        </details>
                                      {%- endif -%}
                                    </li>
                                  {%- endfor -%}
                                </ul>
                              </div>
                            </div>
                          </details>
                        {% comment %} L1 - Link without sub menu {% endcomment %}
                        {%- else -%}
                          <a href="{{ link.url }}" class="block {{ menu_link_styles }}{% if link.current %} text-seaweed-800{% endif %}"{% if link.current %} aria-current="page"{% endif %}>
                            {{ link.title | escape }}
                          </a>
                        {%- endif -%}
                      </li>
                    {%- endfor -%}
                  </ul>
                </nav>
                {% comment %} Customer service menu {% endcomment %}
                <div class="px-8">
                  <div class="border-seaweed-500 border p-4 mb-24 max-w-md">
                    <h4 class="text-center font-serif text-2xl tracking-tight mb-3">Customer Support</h4>
                    <p class="text-center">Monday - Friday 8am - 5pm PT</p>
                    <p class="text-center mb-3"><em>Except for major holidays</em></p>
                    <div class="flex items-center justify-center flex-col sm:flex-row">
                      <a class="button button-secondary button-sm button-icon button-icon-left w-full mr-0 mb-2 sm:mb-0 sm:mr-4" href="mailto:support@oseamalibu.com">
                        {% render 'icon-email', classes: 'w-6 h-6', aria_hidden: true %}
                        <span>Email</span>
                      </a>
                      <button onclick="GorgiasChat.open()" class="button button-secondary button-sm button-icon button-icon-left w-full">
                        {% render 'icon-chat', classes: 'w-6 h-6', aria_hidden: true %}
                        <span>Chat</span>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </details>
        </menu-drawer>
      {%- endif -%}

      {% comment %} Predictive search {% endcomment %}
      <details-modal class="header__search flex justify-center items-center">
        <details class="group">
          <summary
            class="header__icon--search cursor-pointer{% unless section.settings.enable_navbar %} lg:absolute lg:right-[136px] lg:top-3 lg:w-10 lg:h-10{% endunless %}"
            aria-haspopup="dialog"
            aria-label="{{ 'general.search.search' | t }}"
          >
            <span class="flex items-center justify-center h-full">
              <svg class="modal__toggle-open icon icon-search h-7 w-7 hover:text-seaweed-500" aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"> 
                <circle cx="11" cy="11" r="8" /> 
                <line x1="21" y1="21" x2="16.65" y2="16.65" />
              </svg>
              <svg class="modal__toggle-close icon icon-close h-8 w-8 hover:text-seaweed-500" aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18" />
                <line x1="6" y1="6" x2="18" y2="18" />
              </svg>
            </span>
          </summary>
          <div class="search-modal absolute inset-0 z-40 opacity-0 h-full motion-safe:transition-opacity group-open:opacity-100" role="dialog" aria-modal="true" aria-label="{{ 'general.search.search' | t }}">
            <div class="modal-overlay fixed inset-x-0 top-24 bottom-0 bg-seaweed-800/50"></div>
            <div class="search-modal__content bg-white flex items-center justify-center w-full h-full px-6 opacity-0 group-open:opacity-100 motion-safe:transition-opacity" tabindex="-1">
              <predictive-search
                class="w-full md:relative"
                data-loading-text="{{ 'accessibility.loading' | t }}"
              >
                <form
                  action="{{ routes.search_url }}"
                  method="get"
                  role="search"
                  class="search w-full relative -translate-y-6 group-open:translate-y-0 tranition-transform duration-300"
                >
                  <div class="relative flex items-center w-full">
                    <input class="border-seaweed-500 rounded-sm w-full h-10 tracking-wide focus:ring focus:ring-seafoam-300 focus:border-seaweed-700 placeholder:overflow-visible motion-safe:transition-all"
                      id="Search-In-Modal"
                      type="search"
                      name="q"
                      value=""
                      placeholder="Search for products, categories, and content"
                      role="combobox"
                      aria-expanded="false"
                      aria-owns="predictive-search-results-list"
                      aria-controls="predictive-search-results-list"
                      aria-haspopup="listbox"
                      aria-autocomplete="list"
                      autocorrect="off"
                      autocomplete="off"
                      autocapitalize="off"
                      spellcheck="false"
                    >
                    <label class="hidden" for="Search-In-Modal">{{ 'general.search.search' | t }}</label>
                    <input type="hidden" name="options[prefix]" value="last">
                    <button class="cursor-pointer w-10 h-10 flex items-center justify-center ml-2 md:ml-4 shrink-0" aria-label="{{ 'general.search.search' | t }}">
                      <svg class="h-7 w-7 hover:text-seaweed-500" aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"> 
                        <circle cx="11" cy="11" r="8" /> 
                        <line x1="21" y1="21" x2="16.65" y2="16.65" />
                      </svg>
                    </button>
                  </div>
                  <div
                    class="predictive-search fixed top-[52px] left-1/2 -translate-x-1/2 bg-wave-200 z-30 max-h-0 w-screen shadow-md shadow-seaweed-700/10 motion-safe:transition-max-height overflow-y-auto"
                    tabindex="-1"
                    data-predictive-search
                  >
                    <div class="predictive-search__loading-state justify-center p-4">
                      <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                      </svg>
                    </div>
                  </div>
                  <span class="predictive-search-status hidden" role="status" aria-hidden="true"></span>
                </form>
              </predictive-search>
              <button type="button" class="cursor-pointer ml-0.5 md:ml-4 -mr-1 w-10 h-10 flex items-center justify-center shrink-0" aria-label="{{ 'accessibility.close' | t }}">
                <svg class="h-8 w-8 hover:text-seaweed-500" aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18" />
                  <line x1="6" y1="6" x2="18" y2="18" />
                </svg>
              </button>
            </div>
          </div>
        </details>
      </details-modal>

      {% comment %} Inline menu {% endcomment %}
      {%- if section.settings.inline_menu != blank -%}
        {%- unless section.settings.enable_navbar -%}
          <nav class="header__inline-menu flex-1 hidden lg:flex">
            <ul class="header__menu -ml-4 mr-0 my-0 p-0 flex" role="list">
              {%- for link in section.settings.inline_menu.links -%}
                <li>
                  {%- if link.links != blank -%}
                    <details-disclosure>
                      <details class="relative group" id="Details-HeaderMenu-{{ forloop.index }}">
                        <summary class="tracking-wide leading-6 py-3 pl-4 pr-8 font-book">
                          <span {%- if link.child_active %} class="underline"{% endif %}>{{ link.title | escape }}</span>
                        </summary>
                        <ul id="HeaderMenu-MenuList-{{ forloop.index }}" class="opacity-0 -translate-y-6 group-open:opacity-100 group-open:translate-y-0 absolute bg-wave-200 motion-safe:transition-transform-opacity" role="list" tabindex="-1">
                          {%- for childlink in link.links -%}
                            <li>
                              {%- if childlink.links == blank -%}
                                <a href="{{ childlink.url }}" class="header__menu-item caption-large{% if childlink.current %} list-menu__item--active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                                  {{ childlink.title | escape }}
                                </a>
                              {%- else -%}
                                <details class="group-child" id="Details-HeaderSubMenu-{{ forloop.index }}">
                                  <summary class="header__menu-item caption-large">
                                    {{ childlink.title | escape }}
                                    {% render 'icon-caret', classes: 'w-6 h-6' %}
                                  </summary>
                                  <ul id="HeaderMenu-SubMenuList-{{ forloop.index }}" class="opacity-0 -translate-y-6 group-child-open:opacity-100 group-child-open:translate-y-0 motion-safe:transition-transform-opacity">
                                    {%- for grandchildlink in childlink.links -%}
                                      <li>
                                        <a href="{{ grandchildlink.url }}" class="header__menu-item{% if grandchildlink.current %} list-menu__item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                          {{ grandchildlink.title | escape }}
                                        </a>
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                </details>
                              {%- endif -%}
                            </li>
                          {%- endfor -%}
                        </ul>
                      </details>
                    </details-disclosure>
                  {%- else -%}
                    <a href="{{ link.url }}" class="block tracking-wide leading-6 py-3 pl-4 pr-8 font-book whitespace-nowrap"{% if link.current %} aria-current="page"{% endif %}>
                      <span {%- if link.current %} class="underline"{% endif %}>{{ link.title | escape }}</span>
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        {%- endunless -%}
      {%- endif -%}
    </div>

    {% comment %} OSEA logo {% endcomment %}
    {%- if request.page_type == 'index' -%}
      <h1 class="flex-initial">
    {%- endif -%}
