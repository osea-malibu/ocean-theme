</header>

{% comment %} Navbar menu {% endcomment %}
{%- if section.settings.enable_navbar and section.settings.navbar_menu != blank -%}
  <nav class="overflow-x-auto bg-white -mt-3">
    <ul class="flex md:justify-center" role="list">
      {%- for link in section.settings.navbar_menu.links -%}
        <li class="first:pl-1{% if link.links != blank %} group{% endif %}">
          <a href="{{ link.url }}" class="block whitespace-nowrap text-sm xl:text-base py-2 xl:py-1.5 px-2 lg:px-3 font-book tracking-wide"{% if link.current %} aria-current="page"{% endif %}>{{ link.title | escape }}</a>
          {%- if link.links != blank -%}
            <ul role="list" class="invisible group-hover:visible hidden sm:block absolute z-100 bg-sand-200 py-2 shadow-md shadow-seaweed-400/10 {% if link.levels >= 2 %}inset-x-0 top-[88px]{% else %}px-2{% endif %}">
              {%- if link.levels >= 2 -%}<div class="mx-auto px-6 py-4 flex flex-col sm:flex-row justify-center gap-4 sm:gap-7">{%- endif -%}
              {%- for childlink in link.links -%}
                {%- if childlink.links != blank -%}
                  <li>
                    <h2 class="tracking-wide font-medium text-lg leading-none mb-2">{{ childlink.title | escape }}</h2>
                    <ul role="list">
                      {%- for grandchildlink in childlink.links -%}
                        <li>
                          <a href="{{ grandchildlink.url }}" class="block px-3 py-1 -ml-3 rounded-sm leading-snug hover:bg-sand-300 motion-safe:transition-colors"{% if childlink.current %} aria-current="page"{% endif %}>{{ grandchildlink.title | escape }}</a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </li>
                {%- else -%}
                  <li>
                    <a href="{{ childlink.url }}" class="block px-4 py-1.5 rounded-sm leading-snug hover:bg-sand-300 motion-safe:transition-colors"{% if childlink.current %} aria-current="page"{% endif %}>{{ childlink.title | escape }}</a>
                  </li>
                {%- endif -%}
              {%- endfor -%}
              {%- if link.levels >= 2 -%}
                  <figure class="shrink-0 tracking-wide">
                    {%- if section.settings.promo_image != nil -%}
                      {%- if section.settings.promo_link != nil -%}<a href="{{ section.settings.promo_link.url }}">{%- endif -%}
                        <img
                          srcset="{{ section.settings.promo_image | image_url: width: 250 }} 1x, {{ section.settings.promo_image | image_url: width: 500 }} 2x"
                          src="{{ section.settings.promo_image | image_url: width: 250 }}"
                          width="250"
                          height="{{ 250 | divided_by: section.settings.promo_image.aspect_ratio }}"
                          alt="{{ section.settings.promo_heading }}"
                          loading="lazy"
                          class="w-full mb-2"
                        >
                      {%- if section.settings.promo_link != nil -%}</a>{%- endif -%}
                    {%- endif -%}
                    <figcaption>
                      {%- if section.settings.promo_heading != blank -%}
                        <h3 class="text-xl font-medium">{{ section.settings.promo_heading }}</h3>
                      {%- endif -%}
                      {%- if section.settings.promo_paragraph != blank -%}
                        {{ section.settings.promo_paragraph }}
                      {%- endif -%}
                      {%- if section.settings.promo_link != nil -%}
                        <a href="{{ section.settings.promo_link.url }}" class="button button-secondary button-sm mt-2">{{ section.settings.promo_button }}</a>
                      {%- endif -%}
                    </figcaption>
                  </figure>
                </div>
              {%- endif -%}
            </ul>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </nav>
{%- endif -%}

{%- if settings.cart_type == "notification" -%}
  {%- render 'cart-notification' -%}
{%- endif -%}

