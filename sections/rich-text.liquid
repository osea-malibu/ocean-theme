<div class="{{ section.settings.section_classes }}">
  <div
    class="{{ section.settings.container_classes }}"
    {% if section.settings.bg_image != blank %}
      style="background-image: url({{ section.settings.bg_image | image_url: width: 1420 }})"
    {% endif %}
  >
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          <h2 class="{{ block.settings.heading_classes }}" {{ block.shopify_attributes }}>{{ block.settings.heading_text }}</h2>
          {% if block.settings.subheading_text != blank %}<h3 class="{{ block.settings.subheading_classes }}" {{ block.shopify_attributes }}>{{ block.settings.subheading_text }}</h3>{% endif %}
        {%- when 'paragraph' -%}
          <div class="{{ block.settings.paragraph_classes }}" {{ block.shopify_attributes }}>{{ block.settings.paragraph_text }}</div>
        {%- when 'button' -%}
          <a
            {% if block.settings.button_link == blank %}role="link" aria-disabled="true"
            {% else %}href="{{ block.settings.button_link }}"{% endif %}
            {% if block.settings.target_blank %}target="_blank"{% endif %}
            class="{{ block.settings.button_classes }}"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.button_label | escape }}
          </a>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Rich text",
  "tag": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "section_classes",
      "label": "Section classes"
    },
    {
      "type": "textarea",
      "id": "container_classes",
      "label": "Container classes"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image (optional)"
    },
    {
      "type": "paragraph",
      "content": "For documentation and a full list of available utility classes click here."
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "header",
          "content": "Main Heading"
        },
        {
          "type": "html",
          "info": "This field takes HTML",
          "id": "heading_text",
          "label": "Text"
        },
        {
          "type": "textarea",
          "id": "heading_classes",
          "label": "Classes"
        },
        {
          "type": "header",
          "content": "Subheading"
        },
        {
          "type": "html",
          "info": "This field takes HTML",
          "id": "subheading_text",
          "label": "Text"
        },
        {
          "type": "textarea",
          "id": "subheading_classes",
          "label": "Classes"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "html",
          "id": "paragraph_text",
          "info": "This field takes HTML",
          "label": "Text"
        },
        {
          "type": "textarea",
          "id": "paragraph_classes",
          "label": "Classes"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "target_blank",
          "label": "Open in new tab"
        },
        {
          "default": "button button-primary",
          "type": "textarea",
          "id": "button_classes",
          "label": "Classes"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rich text",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "paragraph"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
