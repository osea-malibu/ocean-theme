<script src="{{ 'bundle-builder.js' | asset_url }}" defer="defer"></script>
<style type="text/css">#gorgias-chat-container #chat-button { bottom: 30px !important; right: 8px !important; }</style>

<div class="{{ section.settings.section_classes }}">
  <div class="{{ section.settings.container_classes }}">
    <h1 class="sr-only">
      {{ page.title | escape }}
    </h1>
    <bundle-builder class="flex flex-col gap-6">
      <div id="ByobBar" class="fixed z-[2147483001] inset-x-0 bottom-0 bg-white border-t border-seaweed-400 flex justify-between py-2 px-4 sm:px-6 text-lg tracking-wide">
        <p><b class="count">0/2</b> products selected</p>
        <b class="cost">$0</b>
      </div>
      {%- if section.settings.byob_face_products != blank -%}
        <div class="flex-1 mb-6">
          <div class="text-center mb-4">
            <small class="underline underline-offset-2 uppercase tracking-widest font-medium text-sm mb-2">Step 1</small>
            <h2 class="text-xl tracking-wide">Pick Your <strong>Face</strong> Moisturizer</h2>
          </div>
          <div class="grid grid-cols-3 -mx-2">
            {%- for product in section.settings.byob_face_products.products -%}
              {% render 'bundle-card', product: product, name: 'byob-face' %}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
      {%- if section.settings.byob_body_products != blank -%}
        <div class="flex-1 mb-6">
          <div class="text-center mb-4">
            <small class="underline underline-offset-2 uppercase tracking-widest font-medium text-sm mb-2">Step 2</small>
            <h2 class="text-xl tracking-wide">Pick Your <strong>Body</strong> Moisturizer</h2>
          </div>
          <div class="grid grid-cols-3 -mx-2">
            {%- for product in section.settings.byob_body_products.products -%}
              {%- if product.handle == 'undaria-algae-oil' -%}
                {%- assign uao_variant = product.variants | where: 'title', '5 oz' | first -%}
                {% render 'bundle-card', product: product, variant: uao_variant, name: 'byob-body' %}
              {%- else -%}
                {% render 'bundle-card', product: product, name: 'byob-body' %}
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
      <button class="byob-add-to-cart button button-primary justify-between disabled:bg-seaweed-300 disabled:text-seaweed-400 disabled:border-seaweed-300" disabled>
        <span>Buy now</span>
        <span class="cost">$0</span>
      </button>
    </bundle-builder>
  </div>
</div>

{% schema %}
{
  "name": "Bundle builder",
  "tag": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "section_classes",
      "label": "Section classes"
    },
    {
      "type": "textarea",
      "id": "container_classes",
      "label": "Container classes"
    },
    {
      "type": "collection",
      "label": "Face product options",
      "id": "byob_face_products"
    },
    {
      "type": "collection",
      "label": "Body product options",
      "id": "byob_body_products"
    }
  ],
  "presets": [
    {
      "name": "Bundle builder"
    }
  ]
}
{% endschema %}
