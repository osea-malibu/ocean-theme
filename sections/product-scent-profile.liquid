{%- unless product.metafields.custom.scent_profile_image == blank -%}
  <div class="{{ section.settings.wrapper_classes }}">
    <div class="container">
      <div class="bg-white rounded-xl p-6 lg:p-10 mb-6 lg:mb-12">
        <h2 class="text-center font-serif text-4xl mb-2">{{ section.settings.heading }}</h2>
      </div>
    </div>
  </div>
{% endunless %}

{% schema %}
{
  "name": "Reviews",
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Scent profile"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Scent Profile"
    },
    {
      "type": "textarea",
      "id": "wrapper_classes",
      "label": "Wrapper classes"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "body",
      "label": "Body"
    }
  ]
}
{% endschema %}
