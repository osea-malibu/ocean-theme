{%- unless product.metafields.custom.scent_profile_image == blank -%}
  <div class="{{ section.settings.wrapper_classes }}">
    <span class="block relative -top-32 invisible" id="reviews"></span>
    <div class="container xl:max-w-screen-lg tracking-tight bg-white rounded-xl p-6 lg:p-10 mb-12">
      <h2 class="text-center font-serif text-4xl mb-2">{{ section.settings.heading }}</h2>
    </div>
  </div>
{% endunless %}

{% schema %}
{
  "name": "Reviews",
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Scent profile"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Scent Profile"
    },
    {
      "type": "textarea",
      "id": "wrapper_classes",
      "label": "Wrapper classes"
    }
  ]
}
{% endschema %}
