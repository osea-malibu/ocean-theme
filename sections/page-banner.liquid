<div id="Banner-{{ section.id }}" class="relative {{ section.settings.section_classes }}">
  <div class="{{ section.settings.container_classes }}">
    {%- if section.settings.image != blank -%}
      <picture>
        <source
          srcset="{{ section.settings.image | image_url: width: 400 }} 1x,
            {{ section.settings.image | image_url: width: 800 }} 2x"
          media="(min-width: 0)"
        >
        {%- if section.settings.image_desktop == blank -%}
          <source
            srcset="{{ section.settings.image | image_url: width: 800 }} 1x,
              {{ section.settings.image | image_url: width: 1600 }} 2x"
            media="(min-width: 640px)"
          >
        {%- else -%}
          <source
            srcset="{{ section.settings.image_desktop | image_url: width: 400 }} 1x,
              {{ section.settings.image_desktop | image_url: width: 800 }} 2x"
            media="(min-width: 640px)"
          >
        {%- endif %}
        <img
          srcset="{{ section.settings.image | image_url: width: 400 }} 1x,
            {{ section.settings.image | image_url: width: 800 }} 2x"
          src="{{ section.settings.image | image_url: width: 800 }}"
          loading="lazy"
          alt="{{ section.settings.image.alt | escape }}"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio }}"
          class="block"
        >
      </picture>
    {%- endif -%}
    <div class="absolute {{ section.settings.text_block_classes }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="{{ block.settings.heading_classes }}" {{ block.shopify_attributes }}>
              <span>{{ block.settings.heading }}</span>
            </h2>
          {%- when 'paragraph' -%}
            <div class="{{ block.settings.paragraph_classes }}" {{ block.shopify_attributes }}>
              <span>{{ block.settings.paragraph }}</span>
            </div>
          {%- when 'button' -%}
            {%- if block.settings.button_label != blank -%}
              <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %} class="button {{ block.settings.button_classes }}" {{ block.shopify_attributes }}>{{ block.settings.button_label | escape }}</a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page banner",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Image settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "info": "Recommended image size: 800 x 1000px (height is flexible)",
      "label": "Image (mobile)"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "info": "Recommended image size: 1600 x 800px (height is flexible)",
      "label": "Image (desktop)"
    },
    {
      "type": "paragraph",
      "content": "The following settings are overrides for special use-cases only. Do not alter the default values for normal use."
    },
    {
      "type": "textarea",
      "default": "container px-0 xs:px-6",
      "id": "section_classes",
      "label": "Section classes"
    },
    {
      "type": "textarea",
      "default": "container px-0 xs:px-6",
      "id": "container_classes",
      "label": "Container classes"
    },
    {
      "type": "textarea",
      "default": "w-full",
      "id": "text_block_classes",
      "label": "Text block classes"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "html",
          "id": "heading",
          "label": "Heading text"
        },
        {
          "type": "textarea",
          "id": "heading_classes",
          "label": "Heading classes"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "html",
          "id": "paragraph",
          "label": "Paragraph text"
        },
        {
          "type": "textarea",
          "id": "paragraph_classes",
          "label": "Paragraph classes"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Shop now",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "textarea",
          "id": "button_classes",
          "default": "button-primary",
          "label": "Button classes"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Page banner",
      "blocks": [
        {
          "type": "heading"
        }
      ]
    }
  ]
}
{% endschema %}
