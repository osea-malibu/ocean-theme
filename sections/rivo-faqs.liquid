<!-- Accordion/Collapsible FAQs Block -->
<div class="shopify-section">
  <div class="container">
    <div class="rivo-content-wrapper">
      <div class="rivo-lp-content">
        <img class="rivo-faqs-icon" src="{{ section.settings.faq_icon | img_url: 'master' }}" loading="lazy" alt="FAQs">
        <div class="rivo-lp-section-subheading">{{ section.settings.section_title_subheading }}</div>
        <h2 class="rivo-lp-section-title"> {{ section.settings.section_title }}
        </h2>
        <div class="rivo-faq-section">
          {% for block in section.blocks %}
            <div class="rivo-faq-item">
              <div class="rivo-faq-question">
                <span>{{ block.settings.question }}</span>
                <div class="rivo-faq-icon">&nbsp;</div>
              </div>
              <div class="rivo-faq-answer">{{ block.settings.answer }}</div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

