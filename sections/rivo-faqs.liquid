<!-- Add CSS for Accordion functionality -->
<style>

  h2.rivo-lp-section-title {
    margin: 0;
  }
  
  .rivo-faq-section {
    width: 100%;
    max-width: 960px;
    margin: 0 auto;
    padding: 20px;
    margin-top: 10px;
  }

  .rivo-faq-item {
    margin-bottom: 10px;
    overflow: hidden;
    border-bottom: 1.5px solid #A0BEB7;
  }

  .rivo-faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 18px;
    text-align: left;
    font-weight: bold;
  }

  .rivo-faq-answer {
    height: 0;
    opacity: 0;
    overflow: hidden;
    padding: 0 10px; /* Only set padding on the sides */
    font-size: 16px;
    text-align: left;
    transition: height 0.4s ease, opacity 0.4s ease; /* Remove padding from the transition */
  }

  .rivo-faq-icon {
    --hitbox: 30px;
    background: #fff;
    border-radius: 50%;
    width: var(--hitbox);
    height: var(--hitbox);
    display: block;
    position: relative;
    flex-shrink: 0;
  }

  .rivo-faq-item.open .rivo-faq-answer {
    padding-bottom: 20px; /* Add consistent bottom padding when open */
    opacity: 1;
  }

  .rivo-faq-icon:before,
  .rivo-faq-icon:after {
    content: "";
    position: absolute;
    width: 10px;
    height: 2px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #6E958A;
    transition: all 0.3s ease;
  }

  .rivo-faq-icon:after {
    transform: translate(-50%, -50%) rotate(90deg);
  }

  .rivo-faq-item.open .rivo-faq-answer {
    display: block;
  }

  .rivo-faq-item.open .rivo-faq-icon:before {
    transform: translate(-50%, -50%) rotate(180deg);
  }

  .rivo-faq-item.open .rivo-faq-icon:after {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  
.rivo-faqs-icon {
  margin-bottom: 15px;
  margin-top: 30px;
  max-height: 80px;
}
</style>

<!-- JavaScript for Accordion functionality -->
<script>
   document.addEventListener('DOMContentLoaded', function() {
    var faqItems = document.querySelectorAll('.rivo-faq-item');

    faqItems.forEach(function(item) {
      item.querySelector('.rivo-faq-question').addEventListener('click', function() {
        var currentlyActive = document.querySelector('.rivo-faq-item.open');

        // Close the currently active item if it's not the one clicked
        if (currentlyActive && currentlyActive !== item) {
          currentlyActive.querySelector('.rivo-faq-answer').style.height = '0';
          currentlyActive.classList.remove('open');
        }

        // Toggle the clicked FAQ
        if (item.classList.contains('open')) {
          item.querySelector('.rivo-faq-answer').style.height = '0';
          item.classList.remove('open');
        } else {
          item.classList.add('open');
          var answer = item.querySelector('.rivo-faq-answer');
          answer.style.height = answer.scrollHeight + 'px'; // Set height dynamically based on content
        }
      });
    });
  });
</script>