        {
          "type": "textarea",
          "id": "prod_slider_classes",
          "label": "Product slider classes"
        }
      ]
    },
    {
      "type": "product",
      "name": "Product Tile",
      "settings": [
        {
          "type": "textarea",
          "id": "column_classes",
          "label": "Column classes"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "custom_product_image",
          "label": "Custom image"
        },
        {
          "type": "textarea",
          "id": "image_classes",
          "label": "Image wrapper classes"
        },
        {
          "type": "textarea",
