        },
        {
          "type": "textarea",
          "id": "heading_classes",
          "label": "Heading classes"
        },
        {
          "type": "html",
          "id": "paragraph",
          "info": "This field takes HTML.",
          "label": "Paragraph"
        },
        {
          "type": "textarea",
          "id": "paragraph_classes",
          "label": "Paragraph classes"
        },
        {
          "type": "header",
          "content": "Button settings"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "text",
          "id": "button_aria_label",
