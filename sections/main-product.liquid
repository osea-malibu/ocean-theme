{% comment %} theme-check-disable TemplateLength {% endcomment %}
<section id="main-product">
  <div class="flex flex-col product md:flex-row md:container md:mx-auto md:px-6 md:gap-6 md:py-6 md:items-start lg:gap-0">
    <a class="sr-only button button-secondary button-sm focus:not-sr-only focus:py-1 focus:px-2 focus:border focus:fixed focus:top-4 focus:left-4 focus:z-100" href="#ProductInfo-{{ section.id }}">
      {{ "accessibility.skip_to_product_info" | t }}
    </a>
    {%- if product.media.size > 1 -%}
      <div class="md:w-1/2 lg:w-3/5 relative md:sticky md:top-[120px] overflow-hidden lg:pr-4 xl:pr-10">
        <glide-slider
          class="overflow-hidden gap-0 mb-6 max-w-full glide type-carousel sm:perView-1 md:perView-2 perView-1 lg:flex lg:flex-row-reverse lg:gap-2"
          id="Product-Slider"
          data-breakpoint-limit="none"
        >
          {% render 'product-badge', product: product, classes: 'z-10 left-1 !right-auto md:!left-auto md:!right-1' %}
          <div class="glide__track" data-glide-el="track">
            <ul class="min-h-full glide__slides">
              {%- liquid
                if product.metafields.custom.pdp_main_image != blank
                  assign slider_images = product.metafields.custom.pdp_main_image.value | concat: product.media
                  assign variant_image_index = 1
                  assign gallery_limit = section.settings.gallery_limit | plus: 1
                else
                  assign slider_images = product.media
                  assign variant_image_index = 0
                  assign gallery_limit = section.settings.gallery_limit
                endif 
              -%}
              {%- for media in slider_images limit: gallery_limit -%}
                <li class="glide__slide" data-media-id="{{ section.id }}-{{ media.id }}">
                  {%- if media.media_type == 'image' -%}
                    {%- liquid
                      assign main_image_src = media | image_url: width: 400, height: 500, crop: 'center'
                      assign main_image_src_2x = media | image_url: width: 1280, height: 1600, crop: 'center'
                    -%}
                    {% comment %} theme-check-disable RemoteAsset {% endcomment %}
                    <img
                      {% if product.selected_or_first_available_variant.featured_media != null and forloop.index0 == variant_image_index %}id="Product-VariantImage"{% endif %}
                      srcset="{% render 'imgix', src: main_image_src %} 1x, {% render 'imgix', src: main_image_src_2x %} 2x"
                      src="{% render 'imgix', src: main_image_src_2x %}"
                      loading="lazy"
                      alt="{{ media.alt | escape }}"
                      width="{{ media.width }}"
                      height="{{ media.width | divided_by: 0.8 | round }}"
                      class="object-cover min-h-full md:rounded-md"
                    >
                    {% comment %} theme-check-enable RemoteAsset {% endcomment %}
                  {%- elsif media.media_type == 'video' -%}
                    <deferred-media class="relative w-full h-full deferred-media no-js-hidden" data-media-id="{{ section.id }}">
                      <button
                        id="Deferred-Poster-Modal-{{ section.id }}"
                        class="absolute w-full h-full deferred-media__poster"
                        type="button"
                      >
                        <img
                          srcset="{{ media.preview_image | image_url: width: 400, height: 500, crop: 'center' }} 1x, {{ media.preview_image | image_url: width: 800, height: 1000, crop: 'center' }} 2x"
                          src="{{ media.preview_image | image_url: width: 400, height: 500, crop: 'center' }}"
                          class="md:rounded-md"
                          alt="Loading product video"
                          loading="lazy"
                          width="1280"
                          height="1000"
                        >
                        <span class="flex absolute top-1/2 left-1/2 z-10 justify-center items-center w-20 h-20 rounded-full scale-100 -translate-x-1/2 -translate-y-1/2 deferred-media__poster-button bg-white/50 motion-safe:transition-transform hover:scale-110">
                          {%- render 'icon-play', classes: 'w-8 h-8 text-white -mr-1 ml-1' -%}
                        </span>
                      </button>
                      <template>
                        <video class="object-cover w-full h-full md:rounded-md" playsinline autoplay muted loop controls poster="{{ media.preview_image | image_url: width: 400, height: 500, crop: 'center' }}">
                          {%- for source in media.sources -%}
                            {%- comment -%} theme-check-disable RemoteAsset {%- endcomment -%}
                            <source src="{{ source.url }}" type="video/{{ source.format }}" />
                            {%- comment -%} theme-check-enable RemoteAsset {%- endcomment -%}
                          {%- endfor -%}
                          <img
                            src="{{ media.preview_image | image_url: width: 480, height: 500, crop: 'center' }}"
                            alt=""
                            width="{{ media.preview_image.width }}"
                            height="{{ media.preview_image.width | divided_by: media.preview_image.aspect_ratio | round }}"
                            loading=lazy
                          >
                        </video>
                      </template>
                    </deferred-media>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
          <div class="glide__bullets flex absolute bottom-0 left-0 md:relative md:gap-1 lg:flex-col lg:shrink-0 lg:h-[596px] xl:h-[760px] lg:overflow-y-auto" data-glide-el="controls[nav]">
            {%- for media in slider_images limit: gallery_limit -%}
              <button class="relative p-2 glide__bullet md:px-0 lg:py-0" data-glide-dir="={{ forloop.index0 }}">
                <span class="sr-only">Go to slide {{ forloop.index }}</span>
                {%- if media.media_type == 'image' -%}
                  <span class="block w-2 h-2 rounded-full glide__bullet-icon bg-seaweed-700 md:hidden"></span>
                {%- elsif media.media_type == 'video' -%}
                  <div class="absolute top-1/2 left-1/2 z-10 w-5 h-5 bg-transparent rounded-full -translate-x-1/2 -translate-y-1/2 glide__bullet-icon md:w-8 md:h-8 md:bg-white/50">
                    {%- render 'icon-play', classes: 'absolute inset-0 scale-75 md:text-white md:ml-0.5' -%}
                  </div>
                {%- endif -%}
                {%- liquid
                  assign thumb_image_src = media | image_url: width: 192
                  assign thumb_image_src_2x = media | image_url: width: 252
                -%}
                {% comment %} theme-check-disable RemoteAsset {% endcomment %}
                <img
                  {% if product.selected_or_first_available_variant.featured_media != null and forloop.index0 == variant_image_index %}id="Product-ThumbImage"{% endif %}
                  srcset="{% render 'imgix', src: thumb_image_src %} 1x, {% render 'imgix', src: thumb_image_src_2x %} 2x"
                  src="{% render 'imgix', src: thumb_image_src_2x %}"
                  loading="lazy"
                  alt="{{ media.alt | escape }}"
                  width="{{ media.width }}"
                  height="{{ media.width | divided_by: media.aspect_ratio | round }}"
                  class="hidden object-cover w-24 rounded md:block lg:h-32"
                >
                {% comment %} theme-check-enable RemoteAsset {% endcomment %}
              </button>
            {%- endfor -%}
          </div>
        </glide-slider>
      </div>
    {%- else -%}
      <div class="bg-wave-100 mb-6 md:w-1/2 lg:w-2/5 relative md:sticky md:top-[148px] max-w-full">
        {%- liquid
          assign main_image_src = product.media[0] | image_url: width: 300, height: 375, crop: 'center'
          assign main_image_src_2x = product.media[0] | image_url: width: 600, height: 750, crop: 'center'
        -%}
        {% render 'product-badge', product: product, classes: 'z-10' %}
        {% comment %} theme-check-disable RemoteAsset {% endcomment %}
        <img
          class="mx-auto"
          srcset="{% render 'imgix', src: main_image_src %} 1x, {% render 'imgix', src: main_image_src_2x %} 2x"
          src="{% render 'imgix', src: main_image_src_2x %}"
          loading="lazy"
          alt="{{ product.media[0].alt | escape }}"
          width="{{ product.media[0].width }}"
          height="{{ product.media[0].width | divided_by: 0.8 | round }}"
        >
        {% comment %} theme-check-enable RemoteAsset {% endcomment %}
      </div>
    {%- endif -%}
    <div class="container md:px-0 md:flex-1">
      <div id="ProductInfo-{{ section.id }}" class="{{ section.settings.product_info_classes }}">
        {%- liquid
          assign product_form_id = 'product-form-' | append: section.id
          assign quantity_classes = 'no-js-hidden cursor-pointer flex items-center justify-center 2xs:shrink-0 w-8 h-8 border py-1 -mt-px -mb-px -ml-px box-content border-transparent hover:bg-seafoam-100 hover:border-seaweed-500 motion-safe:transition-colors disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:border-transparent disabled:hover:bg-transparent'
          assign mini_size_array = '1.7 oz, 1 oz, 0.6 oz, 0.22 oz, Scented / 1 oz' | split: ', '
          assign jumbo_size_array = '9.6 oz, 9.2 oz' | split: ', '
          assign set_products = collections['skincare-sets'].products | map: 'handle'

          assign product_collections_handles = product.collections | map: 'handle'
          if product_collections_handles contains 'exclude-from-site'
            assign excluded_from_site = true
          else
            assign excluded_from_site = false
          endif
        -%}

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}
            {%- when 'text' -%}
              {%- if block.settings.text != blank -%}
                <div class="{{ block.settings.text_block_classes }}" {{ block.shopify_attributes }}>
                  {{- block.settings.text -}}
                </div>
              {%- endif -%}
            {%- when 'title' -%}
              <h1 class="{{ block.settings.title_classes }}" {{ block.shopify_attributes }}>
                {{- product.title | replace: 'Eye Serum', 'Serum' | replace: '™', '<sup class="text-[60%] -mr-1 -left-0.5">™</sup>' | replace: '®', '<sup class="text-[60%] -mr-1 -left-0.5">®</sup>' | replace: ' v2', '' -}}
              </h1>
            {%- when 'price' -%}
              <div class="no-js-hidden main-price flex {{ block.settings.price_classes }}" id="price-{{ section.id }}" role="status">
                {%- render 'price', product: product, use_variant: true -%}
                {%- if product.metafields.custom.set_value -%}
                  <span class="self-center px-1.5 py-px ml-2 text-sm font-medium tracking-wide whitespace-nowrap bg-seafoam-200 text-seaweed-700">${{ product.metafields.custom.set_value }} value</span>
                {%- endif -%}
              </div>
            {%- when 'rating' -%}
              <div class="{{ block.settings.rating_classes }} flex gap-2 items-center">
                {%- unless excluded_from_site -%}
                  <a href="#reviews">
                    {% render 'product-rating', product: product %}
                  </a>
                {%- endunless -%}
                {%- if product.metafields.custom.faq != nil -%}
                  <a href="#ProductFaqs" class="text-xs link">Product FAQs</a>
                {%- endif -%}
              </div>
              {%- if product.metafields.custom.set_value -%}
                <div class="relative -bottom-2 col-span-12">
                  <strong class="self-center px-1.5 py-px text-sm font-medium tracking-wide whitespace-nowrap bg-seafoam-200 text-seaweed-700">${{ product.metafields.custom.set_value }} value</strong>
                </div>
              {%- endif -%}
            {%- when 'info_tabs' -%}
              {% render 'product-info-tabs', product: product, block: block %}
            {%- when 'collapsible_tab' -%}
              {% render 'product-collapsible-tab', product: product, block: block, mini_size_array: mini_size_array %}
            {%- when 'free_gift_info' -%}
              {%- liquid
                assign loyalty_only = settings.is_loyalty_gwp
                if settings.enable_gwp and settings.gwp_type == 'banner' or settings.gwp_type == 'auto'
                  if loyalty_only and customer
                    assign free_gifts_active = true 
                  elsif loyalty_only == false
                    assign free_gifts_active = true
                  else
                    assign free_gifts_active = false
                  endif
                else
                  assign free_gifts_active = false
                endif
              -%}
              {%- if free_gifts_active -%}
                <div class="{{ block.settings.free_gift_info_classes }}">
                  {%- if settings.gwp_tier1_product != blank -%}
                    {% render 'product-free-gift-info', product: settings.gwp_tier1_product, threshold: settings.gwp_tier1_threshold %}
                  {%- endif -%}
                  {%- if settings.gwp_tier2_product != blank -%}
                    {% render 'product-free-gift-info', product: settings.gwp_tier2_product, threshold: settings.gwp_tier2_threshold %}
                  {%- endif -%}
                  {%- if settings.gwp_tier3_product != blank -%}
                    {% render 'product-free-gift-info', product: settings.gwp_tier3_product, threshold: settings.gwp_tier3_threshold %}
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- when 'quantity_selector' -%}
              {%- unless excluded_from_site -%}
                <div class="{{ block.settings.qty_classes }}" {{ block.shopify_attributes }}>
                  <label class="sr-only" for="Quantity-{{ section.id }}">
                    {{ 'products.product.quantity.label' | t }}
                  </label>
                  <quantity-input class="inline-flex w-full rounded-md border quantity pdp-quantity border-seaweed-400">
                    <button
                      class="{{ quantity_classes }} rounded-l-md"
                      name="minus"
                      type="button"
                    >
                      <span class="sr-only">{{ 'products.product.quantity.decrease' | t: product: product.title | escape }}</span>
                      {% render 'icon-minus', classes: 'h-5 w-5 text-seaweed-700 pointer-events-none', stroke_width: 2, aria_hidden: true %}
                    </button>
                    <input
                      class="px-0 py-1 w-8 h-10 text-xl text-center border-0 quantity__input grow"
                      type="number"
                      name="quantity"
                      id="Quantity-{{ section.id }}"
                      min="1"
                      value="1"
                      form="{{ product_form_id }}"
                    >
                    <button
                      class="{{ quantity_classes }} rounded-r-md"
                      name="plus"
                      type="button"
                    >
                      <span class="sr-only">{{ 'products.product.quantity.increase' | t: product: product.title | escape }}</span>
                      {% render 'icon-plus', classes: 'h-5 w-5 text-seaweed-700 pointer-events-none', stroke_width: 2, aria_hidden: true %}
                    </button>
                  </quantity-input>
                </div>
              {%- endunless -%}
            {%- when 'variant_picker' -%}
              {%- unless set_products contains product.handle -%}
                <div class="{{ block.settings.variant_classes }}">
                  {%- unless product.has_only_default_variant -%}
                    {%- if product.variants.size == 1 -%}
                      {%- for option in product.options_with_values -%}
                        <strong class="block font-medium tracking-wide text-sm{% if block.settings.hide_label %} sr-only{% endif %}">{{ option.name }}</strong>
                        {%- for value in option.values -%}
                          <div class="mr-2 mb-2 lowercase rounded-full button button-xs button-secondary bg-wave-200">
                            {{ value }}
                          </div>
                        {%- endfor -%}
                      {%- endfor -%}
                    {%- else -%}
                      <variant-radios
                        class="block no-js-hidden"
                        data-section="{{ section.id }}"
                        data-url="{{ product.url }}"
                        data-is-main-pdp="true"
                        data-mini-sizes="{{ mini_size_array | join: ',' }}"
                      >
                        {%- for option in product.options_with_values -%}
                          <fieldset class="js group">
                            <legend class="font-medium text-sm mb-1{% if block.settings.hide_label and product.options_with_values.size < 2 %} sr-only{% endif %}">Select {{ option.name | downcase }}:</legend>
                            <div class="flex flex-wrap items-center mb-2 group-last-of-type:mb-0">
                              {%- for value in option.values -%}
                                {%- liquid
                                  assign mini_variant = false
                                  assign jumbo_variant = false
                                  assign normalized_value = value | replace: 'fl ', ''

                                  if mini_size_array contains normalized_value
                                    assign mini_variant = true
                                  elsif jumbo_size_array contains normalized_value
                                    assign jumbo_variant = true
                                  endif
                                -%}
                                <div>
                                  {%- assign normalized_option_value = value | replace: 'fl ', '' -%}
                                  <input type="radio"
                                    id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                                    class="peer hidden{% if mini_size_array contains normalized_option_value %} travel-input{% endif %}"
                                    name="{{ option.name }}"
                                    value="{{ value | escape }}"
                                    form="{{ product_form_id }}"
                                    {% if option.selected_value == value %}checked{% endif %}
                                  >
                                  <label
                                    class="flex-col gap-0.5 px-4 {% if option.name == 'Size' %}py-1{% else %}py-2.5{% endif %} button button-xs button-secondary rounded-full peer-checked:bg-wave-200 peer-checked:border-seaweed-700 mr-2 mb-1 peer-disabled:opacity-50"
                                    for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                                  >
                                    {%- if option.name == 'Size' -%}
                                      {%- if mini_variant -%}
                                        <b class="tracking-normal leading-none capitalize">Mini</b>
                                      {%- elsif jumbo_variant -%}
                                        <b class="tracking-normal leading-none capitalize">Jumbo</b>
                                      {%- else -%}
                                        <b class="tracking-normal leading-none capitalize">Standard</b>
                                      {%- endif -%}
                                    {%- endif -%}
                                    <span class="leading-none {% if option.name == 'Scent' %}normal-case tracking-normal{% else %}lowercase tracking-wide{% endif %}">{{ value }}</span>
                                  </label>
                                </div>
                              {%- endfor -%}
                            </div>
                          </fieldset>
                        {%- endfor -%}
                        <script type="application/json" class="variant-data">
                          {{ product.variants | json }}
                        </script>
                      </variant-radios>
                    {%- endif -%}
                  {%- endunless -%}

                  <noscript class="product-form__noscript-wrapper-{{ section.id }}">
                    <div class="product-form__input{% if product.has_only_default_variant %} hidden{% endif %}">
                      <label class="form__label" for="Variants-{{ section.id }}">{{ 'products.product.product_variants' | t }}</label>
                      <div class="select">
                        <select name="id" id="Variants-{{ section.id }}" form="{{ product_form_id }}">
                          {%- for variant in product.variants -%}
                            <option
                              {% if variant == product.selected_or_first_available_variant %}selected="selected"{% endif %}
                              {% if variant.available == false %}disabled{% endif %}
                              value="{{ variant.id }}"
                            >
                              {{ variant.title }}
                              {%- if variant.available == false %} - {{ 'products.product.sold_out' | t }}{% endif %}
                              - {{ variant.price | money | strip_html }}
                            </option>
                          {%- endfor -%}
                        </select>
                        {% render 'icon-caret', classes: 'w-4 h-4' %}
                      </div>
                    </div>
                  </noscript>
                </div>
              {%- endunless -%}
              {% if product.type contains 'Gift Card' %}
                <!-- ShopKeeper Gift Card -->
                <gift-card-fields class="col-span-12">
                  <div id="skt-fields">
                    <div>
                      <label for="gc_to" class="text-sm font-medium">To Name:</label>
                      <input id="gc_to" type="text" value="" class="mb-2 w-full input" />
                    </div>
                    <div>
                      <label for="gc_from" class="text-sm font-medium">From Name:</label>
                      <input id="gc_from" type="text" value="" class="mb-2 w-full input" />
                    </div>
                    <div class="mb-2">
                      <label for="gc_msg" class="text-sm font-medium">Message:</label>
                      <textarea id="gc_msg" class="block w-full input" maxlength="400"></textarea>
                      <small class="block text-right">Max characters: 400</small>
                    </div>
                  </div>
                </gift-card-fields>
                <!-- End ShopKeeper -->
              {% endif %}
            {%- when 'subscription_picker' -%}
              {%- liquid
                assign subscription_group = null
                for group in product.selling_plan_groups
                  if group.name == 'Subscribe and Save'
                    assign subscription_group = group
                  endif
                endfor

                assign allocations = product.selected_or_first_available_variant.selling_plan_allocations
                assign non_subscription_allocation = false
                if allocations.size == 1 and allocations[0].selling_plan_group_id != subscription_group.id
                  assign non_subscription_allocation = true
                endif
              -%}
              {%- unless product.selling_plan_groups.size == 0 -%}
                {%- assign purchase_options = 'onetime, autodeliver' | split: ', ' -%}
                <subscription-radios
                  class="subscription motion-safe:transition-max-height overflow-hidden {{ block.settings.subscription_classes }} {% if product.selected_or_first_available_variant.selling_plan_allocations.size == 0 or non_subscription_allocation %}max-h-0{% else %}max-h-52{% endif %}"
                  data-recommended-interval="{{ product.metafields.custom.subscription_interval }}"
                  data-subscription-group-id = "{{ subscription_group.id }}"
                >
                  <fieldset class="overflow-hidden mt-2 rounded-lg border border-seaweed-400">
                    <legend class="sr-only">Purchase options</legend>
                    {%- for option in purchase_options -%}
                      <div class="purchase-option {{ option }} relative block w-full motion-safe:transition-colors duration-200 {% if option == 'onetime' %}bg-wave-200 border-b border-seaweed-400{% else %}bg-white{% endif %}">
                        <input type="radio"
                          name="purchase_option"
                          id="purchase_option-{{ option }}"
                          class="bg-white sr-only peer"
                          value="{{ option }}"
                          {% if option == 'onetime' %}checked{% endif %}
                        />
                        <span class="flex absolute left-2 top-3 justify-center items-center w-5 h-5 bg-white rounded-full border-2 cursor-pointer pointer-events-none 2xs:left-3 border-seaweed-700 peer-checked:border-seaweed-500 peer-checked:child:scale-100 motion-safe:transition-colors">
                          <span class="absolute top-0.5 left-0.5 w-3 h-3 rounded-full scale-0 bg-seaweed-700 motion-safe:transition-transform"></span>
                        </span>
                        <label for="purchase_option-{{ option }}" class="block py-3 pr-2 pl-9 2xs:pl-10 2xs:pr-3 xs:pr-4">
                          <span class="flex justify-between">
                            <strong class="block text-sm font-bold tracking-wide leading-5 uppercase xs:tracking-widest md:tracking-wide lg:tracking-widest">
                              {%- if option == 'onetime' -%}
                                <span>One-time purchase</span>
                              {%- else -%}
                                <span>Subscribe & save 10%</span>
                                <span class="hidden px-1 h-4 text-xs font-bold tracking-normal normal-case rounded popular-badge bg-neon-green text-seaweed-700">Popular</span>
                              {%- endif -%}
                            </strong>
                            {%- if option == 'onetime' -%}
                              {% render 'price', product: product, use_variant: true, price_class: 'text-sm font-medium' %}
                            {%- else -%}
                              {% render 'price', product: product, subscription: true, price_class: 'text-sm font-medium' %}
                            {%- endif -%}
                          </span>
                        </label>
                        {%- if option == 'autodeliver' -%}
                          <span class="block pr-2 pl-9 -mt-2 mb-3 text-xs leading-tight 2xs:tracking-wide md:tracking-normal lg:tracking-wide 2xs:pl-10 2xs:pr-3 xs:pr-4">
                            <b class="font-medium">FREE US shipping</b>, skip or cancel anytime.
                            <modal-opener class="product-popup-modal__opener no-js-hidden" data-modal="#SubscriptionPopup-{{ block.id }}" {{ block.shopify_attributes }}>
                              <button class="underline cursor-pointer product-popup-modal__button md:tracking-tight lg:tracking-wide" type="button" aria-haspopup="dialog">Learn more</button>
                            </modal-opener>
                          </span>
                          <div class="overflow-hidden pr-2 pl-9 max-h-0 2xs:pl-10 2xs:pr-3 xs:pr-4 peer-checked:max-h-20 motion-safe:transition-max-height">
                            <fieldset class="flex pb-3 mb-2 selling-plan-options js">
                              <legend class="text-sm font-medium">Delivery every</legend>
                              {%- for allocation in product.selected_or_first_available_variant.selling_plan_allocations -%}
                                {%- if allocation.selling_plan_group_id == subscription_group.id -%}
                                  {%- liquid
                                    for group in product.selling_plan_groups
                                      if group.id == allocation.selling_plan_group_id
                                        assign selling_plan_group = group
                                      endif
                                    endfor

                                    for plan in selling_plan_group.selling_plans
                                      if plan.id == allocation.selling_plan.id
                                        assign selling_plan = plan
                                      endif
                                    endfor
                                  -%}
                                  <div class="block grow{% unless forloop.last %} mr-1{% endunless %}">
                                    <input type="radio"
                                      id="{{ allocation.selling_plan.id }}"
                                      class="sr-only peer"
                                      name="selling_plan"
                                      value="{{ allocation.selling_plan.id }}"
                                      form="{{ product_form_id }}"
                                    />
                                    <label
                                      class="px-1 w-full tracking-wide lowercase button button-xs button-secondary peer-checked:border-seaweed-500 peer-checked:bg-wave-100 peer-checked:outline peer-checked:outline-neon-green"
                                      for="{{ allocation.selling_plan.id }}"
