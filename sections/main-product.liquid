                                  class="peer hidden{% if travel_sizes contains normalized_option_value %} travel-input{% endif %}"
                                  name="{{ option.name }}"
                                  value="{{ value | escape }}"
                                  form="{{ product_form_id }}"
                                  {% if option.selected_value == value %}checked{% endif %}
                                >
                                <label
                                  class="button button-xs button-secondary rounded-full peer-checked:bg-wave-200 mr-2 mb-1 peer-disabled:opacity-50 tracking-wide {% if option.name == 'Scent' %}normal-case{% else %}lowercase{% endif %}"
                                  for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                                >
                                  {{ value }}
                                </label>
                              </div>
                            {%- endfor -%}
                          </div>
