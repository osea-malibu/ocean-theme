{% comment %} theme-check-disable TemplateLength {% endcomment %}
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<section id="main-product">
  <div class="product flex flex-col md:flex-row md:container md:mx-auto md:px-6 md:gap-6 md:py-6 md:items-start lg:gap-10 lg:max-w-screen-lg">
    <a class="sr-only button button-secondary button-sm focus:not-sr-only focus:py-1 focus:px-2 focus:border focus:fixed focus:top-4 focus:left-4 focus:z-100" href="#ProductInfo-{{ section.id }}">
      {{ "accessibility.skip_to_product_info" | t }}
    </a>
    {%- if product.media.size > 1 -%}
      <div class="md:flex-1 relative md:sticky md:top-[120px] overflow-hidden">
        <glide-slider
          class="glide type-carousel gap-4 sm:peek.after-120 md:peek.after-120 sm:perView-1 md:perView-2 perView-1 mb-6 overflow-hidden max-w-full lg:flex lg:flex-row-reverse lg:gap-2"
          id="Product-Slider"
          data-breakpoint-limit="none"
        >
          {% render 'product-badge', product: product, classes: 'z-10 left-1 !right-auto md:!left-auto md:!right-1' %}
          <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides min-h-full">
              {%- for media in product.media limit: section.settings.gallery_limit -%}
                <li class="glide__slide" data-media-id="{{ section.id }}-{{ media.id }}">
                  {%- if media.media_type == 'image' -%}
                    {%- liquid
                      assign main_image_src = media | image_url: width: 400, height: 500, crop: 'center'
                      assign main_image_src_2x = media | image_url: width: 800, height: 1000, crop: 'center'
                    -%}
                    {% comment %} theme-check-disable RemoteAsset {% endcomment %}
                    <img
                      {% if product.selected_or_first_available_variant.featured_media != null and forloop.first %}id="Product-VariantImage"{% endif %}
                      srcset="{% render 'imgix', src: main_image_src %} 1x, {% render 'imgix', src: main_image_src_2x %} 2x"
                      src="{% render 'imgix', src: main_image_src_2x %}"
                      loading="lazy"
                      alt="{{ media.alt | escape }}"
                      width="{{ media.width }}"
                      height="{{ media.width | divided_by: 0.8 | round }}"
                      class="min-h-full object-cover"
                    >
                    {% comment %} theme-check-enable RemoteAsset {% endcomment %}
                  {%- elsif media.media_type == 'video' -%}
                    <deferred-media class="relative deferred-media no-js-hidden w-full h-full" data-media-id="{{ section.id }}">
                      <button
                        id="Deferred-Poster-Modal-{{ section.id }}"
                        class="absolute w-full h-full deferred-media__poster"
                        type="button"
                      >
                        <img
                          srcset="{{ media.preview_image | image_url: width: 400, height: 500, crop: 'center' }} 1x, {{ media.preview_image | image_url: width: 800, height: 1000, crop: 'center' }} 2x"
                          src="{{ media.preview_image | image_url: width: 400, height: 500, crop: 'center' }}"
                          alt="Loading product video"
                          loading="lazy"
                          width="1280"
                          height="1000"
                        >
                        <span class="deferred-media__poster-button bg-white/50 rounded-full flex items-center justify-center h-20 w-20 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 scale-100 z-10 motion-safe:transition-transform hover:scale-110">
                          {%- render 'icon-play', classes: 'w-8 h-8 text-white -mr-1 ml-1' -%}
                        </span>
                      </button>
                      <template>
                        <video class="h-full w-full object-cover" playsinline autoplay muted loop controls poster="{{ media.preview_image | image_url: width: 400, height: 500, crop: 'center' }}">
                          {%- for source in media.sources -%}
                            {%- comment -%} theme-check-disable RemoteAsset {%- endcomment -%}
                            <source src="{{ source.url }}" type="video/{{ source.format }}" />
                            {%- comment -%} theme-check-enable RemoteAsset {%- endcomment -%}
                          {%- endfor -%}
                          <img
                            src="{{ media.preview_image | image_url: width: 480, height: 500, crop: 'center' }}"
                            alt=""
                            width="{{ media.preview_image.width }}"
                            height="{{ media.preview_image.width | divided_by: media.preview_image.aspect_ratio | round }}"
                            loading=lazy
                          >
                        </video>
                      </template>
                    </deferred-media>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
          <div class="glide__bullets flex absolute bottom-0 left-0 md:relative md:gap-2 lg:gap-1 lg:flex-col lg:shrink-0 lg:h-[520px] lg:overflow-y-auto" data-glide-el="controls[nav]">
            {%- for media in product.media limit: section.settings.gallery_limit -%}
              <button class="glide__bullet relative p-2 md:px-0 lg:py-0" data-glide-dir="={{ forloop.index0 }}">
                <span class="sr-only">Go to slide {{ forloop.index }}</span>
                {%- if media.media_type == 'image' -%}
                  <span class="block w-2 h-2 bg-seaweed-700 rounded-full md:hidden"></span>
                {%- elsif media.media_type == 'video' -%}
                  <div class="absolute z-10 w-5 h-5 md:w-8 md:h-8 rounded-full bg-transparent md:bg-white/50 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
                    {%- render 'icon-play', classes: 'absolute inset-0 scale-75 md:text-white md:ml-0.5' -%}
                  </div>
                {%- endif -%}
                {%- liquid
                  assign thumb_image_src = media | image_url: width: 48
                  assign thumb_image_src_2x = media | image_url: width: 96
                -%}
                {% comment %} theme-check-disable RemoteAsset {% endcomment %}
                <img
                  srcset="{% render 'imgix', src: thumb_image_src %} 1x, {% render 'imgix', src: thumb_image_src_2x %} 2x"
                  src="{% render 'imgix', src: thumb_image_src_2x %}"
                  loading="lazy"
                  alt="{{ media.alt | escape }}"
                  width="{{ media.width }}"
                  height="{{ media.width | divided_by: media.aspect_ratio | round }}"
                  class="hidden md:block w-14 h-20 object-cover"
                >
                {% comment %} theme-check-enable RemoteAsset {% endcomment %}
              </button>
            {%- endfor -%}
          </div>
        </glide-slider>
      </div>
    {%- else -%}
      <div class="bg-wave-100 mb-6 md:flex-1 relative md:sticky md:top-[148px] max-w-full">
        {%- liquid
          assign main_image_src = product.media[0] | image_url: width: 300, height: 375, crop: 'center'
          assign main_image_src_2x = product.media[0] | image_url: width: 600, height: 750, crop: 'center'
        -%}
        {% render 'product-badge', product: product, classes: 'z-10' %}
        {% comment %} theme-check-disable RemoteAsset {% endcomment %}
        <img
          class="mx-auto"
          srcset="{% render 'imgix', src: main_image_src %} 1x, {% render 'imgix', src: main_image_src_2x %} 2x"
          src="{% render 'imgix', src: main_image_src_2x %}"
          loading="lazy"
          alt="{{ product.media[0].alt | escape }}"
          width="{{ product.media[0].width }}"
          height="{{ product.media[0].width | divided_by: 0.8 | round }}"
        >
        {% comment %} theme-check-enable RemoteAsset {% endcomment %}
      </div>
    {%- endif -%}
    <div class="container md:px-0 md:flex-1">
      <div id="ProductInfo-{{ section.id }}" class="{{ section.settings.product_info_classes }}">
        {%- liquid
          assign product_form_id = 'product-form-' | append: section.id
          assign quantity_classes = 'no-js-hidden cursor-pointer flex items-center justify-center 2xs:shrink-0 w-8 h-8 border py-1 -mt-px -mb-px -ml-px box-content border-transparent hover:bg-seafoam-100 hover:border-seaweed-500 motion-safe:transition-colors disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:border-transparent disabled:hover:bg-transparent'
          assign travel_sizes = '1.7 oz, 1 oz, 0.6 oz, 0.22 oz, Scented / 1 oz' | split: ', '
          assign set_products = collections['skincare-sets-1'].products | map: 'handle'
          assign normalized_variant_title = product.selected_or_first_available_variant.title | replace: 'fl ', ''

          assign is_fragrance_free = false
          if product.options contains 'Scent' and normalized_variant_title contains 'Fragrance free'
            assign is_fragrance_free = true
          endif

          assign product_collections_handles = product.collections | map: 'handle'
          if product_collections_handles contains 'exclude-from-site'
            assign excluded_from_site = true
          else
            assign excluded_from_site = false
          endif
        -%}

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}
            {%- when 'text' -%}
              {%- if block.settings.text != blank -%}
                <div class="{{ block.settings.text_block_classes }}" {{ block.shopify_attributes }}>
                  {{- block.settings.text -}}
                </div>
              {%- endif -%}
            {%- when 'title' -%}
              <h1 class="{{ block.settings.title_classes }}" {{ block.shopify_attributes }}>
                {{- product.title | replace: 'Eye Serum', 'Serum' | replace: '™', '<sup class="text-[60%] -mr-1 -left-0.5">™</sup>' | replace: '®', '<sup class="text-[60%] -mr-1 -left-0.5">®</sup>' -}}
              </h1>
            {%- when 'price' -%}
              <div class="no-js-hidden main-price flex {{ block.settings.price_classes }}" id="price-{{ section.id }}" role="status">
                {%- render 'price', product: product, use_variant: true -%}
                {%- if product.metafields.custom.set_value -%}
                  <span class="ml-2 self-center text-sm bg-seafoam-200 text-seaweed-700 font-medium px-1.5 py-px tracking-wide whitespace-nowrap">${{ product.metafields.custom.set_value }} value</span>
                {%- endif -%}
              </div>
            {%- when 'rating' -%}
              {% render 'product-rating', product: product, classes: block.settings.rating_classes %}
              {%- if product.metafields.custom.set_value -%}
                <div class="col-span-12 relative -bottom-2">
                  <span class="self-center text-sm bg-seafoam-200 text-seaweed-700 font-medium px-1.5 py-px tracking-wide whitespace-nowrap">${{ product.metafields.custom.set_value }} value</span>
                </div>
              {%- endif -%}
            {%- when 'benefits' -%}
              {%- if product.metafields.custom.benefits.value.size > 0 -%}
                <div class="{{ block.settings.benefits_classes }}">
                  <h2 class="{{ block.settings.benefits_label_classes }}">Benefits</h2>
                  <ul class="{{ block.settings.benefits_content_classes }}">
                    {%- if is_fragrance_free -%}
                      {%- if block.settings.benefits_hide_icons -%}
                        <li>Fragrance free</li>
                      {%- else -%}
                        <li class="w-24 flex flex-start">
                          <div class="flex flex-col items-center">
                            {%- render 'icon-benefit-mini', icon: 'fragrance-free', stroke_width: 10, classes: 'w-4 h-4 block mr-2', aria_hidden: true -%}
                            <span class="text-sm font-book leading-none">Fragrance free</span>
                          </div>
                        </li>
                      {%- endif -%}
                    {%- endif -%}
                    {%- liquid
                      assign benefit_limit = 4
                      if is_fragrance_free
                        assign benefit_limit = 3
                      endif
                    -%}
                    {%- for benefit in product.metafields.custom.benefits.value limit: benefit_limit -%}
                      {%- if block.settings.benefits_hide_icons -%}
                        <li>{{ benefit }}</li>
                      {%- else -%}
                        {%- assign benefit_icon = benefit | handle -%}
                        <li class="flex">
                          <div class="flex flex-row items-center">
                            {%- render 'icon-benefit-mini', icon: benefit_icon, stroke_width: 10, classes: 'w-4 h-4 block mr-2', aria_hidden: true -%}
                            <span class="text-sm font-book leading-none{% unless benefit.size > 12 %} tracking-wide{% endunless %}">
                              {{ benefit }}
                            </span>
                          </div>
                        </li>
                      {%- endif -%}
                    {%- endfor -%}
                  </ul>
                </div>
              {%- endif -%}
            {%- when 'skin_types' -%}
              {%- if product.metafields.custom.skin_types_list != blank or product.metafields.custom_fields.skin_types != blank -%}
                <div class="{{ block.settings.skin_types_classes }}{% if product.metafields.custom.scent_profile == blank and product.metafields.custom.scent_profile_short == blank %} -mr-4{% endif %}">
                  <h2 class="{{ block.settings.skin_types_label_classes }}">Skin types</h2>
                  {%- if product.metafields.custom.skin_types_list != blank -%}
                    <ul class="icon-list bullet !pl-5 {{ block.settings.skin_types_content_classes }}">
                      {%- for skin_type in product.metafields.custom.skin_types_list.value -%}
                        {%- if skin_type == 'Not for sensitive' -%}
                          <li class="flex items-start before:!hidden">
                            {% render 'icon-close', classes: 'w-4 h-4 mr-1 -ml-5 shrink-0', stroke_width: 2 %}
                            <span>{{ skin_type }}</span>
                          </li>
                        {%- else -%}
                          <li>{{ skin_type }}</li>
                        {%- endif -%}
                      {%- endfor -%}
                    </ul>
                  {%- elsif product.metafields.custom_fields.skin_types != blank -%}
                    <p class="{{ block.settings.skin_types_content_classes }}">{{ product.metafields.custom_fields.skin_types }}</p>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- when 'scent_profile' -%}
              {%- if product.metafields.custom.scent_profile != blank or product.metafields.custom.scent_profile_short != blank -%}
                <div class="{{ block.settings.scent_profile_classes }}">
                  <h2 class="{{ block.settings.scent_profile_label_classes }}">Scent profile</h2>
                  {%- if product.metafields.custom.scent_profile_short -%}
                    <div class="{{ block.settings.scent_profile_content_classes }}">{{ product.metafields.custom.scent_profile_short }}</div>
                  {%- else -%}
                    <div class="{{ block.settings.scent_profile_content_classes }}">{{ product.metafields.custom.scent_profile }}</div>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- when 'info_tabs' -%}
              {%- liquid
                assign tabs = 'Description' | sort
                assign how_to_use = product.metafields.custom.how_to_use
                assign custom_tab_handles = block.settings.info_tab_custom_tab_handles | split: ', '

                if how_to_use != blank or product.metafields.custom_fields.how_it_works != blank
                  assign how_to_use_array = 'How to Use' | sort
                  assign tabs = tabs | concat: how_to_use_array
                endif

                if block.settings.info_tab_custom_tab_label != blank and custom_tab_handles contains product.handle
                  assign custom_tab_array = 'Custom' | sort
                  assign tabs = tabs | concat: custom_tab_array
                endif

                if product.metafields.custom.recycling != blank
                  assign recycling_array = 'Recycling' | sort
                  assign tabs = tabs | concat: recycling_array
                endif

                if product.handle == 'limited-edition-90s-crewneck'
                  assign custom_tab_array = 'Size Chart' | sort
                  assign tabs = tabs | concat: custom_tab_array
                endif
              -%}
              <tab-controller id="pdp-info-tabs" data-active-class="z-10 !bg-white" class="{{ block.settings.info_tab_wrapper_classes }}">
                <ul aria-controls="featured-collections-tabs" role="tablist" class="flex justify-start items-bottom">
                  {%- for tab in tabs -%}
                    <li
                      role="tab"
                      aria-controls="tab-{{ forloop.index }}-{{ block.id }}"
                      tabindex="0"
                      aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                      class="relative rounded-t border-x border-t border-seaweed-300 bg-wave-100 px-2 2xs:px-3 py-1 cursor-pointer whitespace-nowrap {% unless forloop.last %} mr-1{% endunless %}{% if forloop.first %} z-10 !bg-white{% endif %} {{ block.settings.info_tab_label_classes }}"
                    >
                      {%- if tab == 'Custom' -%}
                        {{ block.settings.info_tab_custom_tab_label }}
                      {%- else -%}
                        {{ tab }}
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
                {%- for tab in tabs -%}
                  <div
                    id="tab-{{ forloop.index }}-{{ block.id }}"
                    role="tabpanel"
                    aria-expanded="{% if forloop.first %}true{% else %}false{% endif %}"
                    class="relative border border-seaweed-300 rounded-r rounded-bl p-4 z-0 -mt-px {{ block.settings.info_tab_content_classes }}"
                  >
                    {%- case tab -%}
                      {%- when 'Description' -%}
                        <div>{{ product.metafields.custom_fields.description }}</div>
                      {%- when 'How to Use' -%}
                        {%- if how_to_use != blank or product.metafields.custom_fields.how_it_works != blank -%}
                          {%- capture how_to_html -%} 
                            {%- if product.metafields.custom.how_to_use != blank -%}
                              <table>
                                <tr class="align-top td:pb-2">
                                  <td><b class="mr-1">How:</b></td>
                                  <td>{{ how_to_use.value.how }}</td>
                                </tr>
                                <tr class="align-top td:pb-2">
                                  <td><b class="mr-1">When:</b></td>
                                  <td>{{ how_to_use.value.when }}</td>
                                </tr>
                                {%- if how_to_use.value.pro_tip != nil -%}
                                  <tr class="align-top{% if how_to_use.value.warnings.size > 0 %} td:pb-2{% endif %}">
                                    <td><b class="mr-1 whitespace-nowrap">Pro tip:</b></td>
                                    <td>{{ how_to_use.value.pro_tip }}</td>
                                  </tr>
                                {%- endif -%}
                                {%- if how_to_use.value.warnings.size > 0 -%}
                                  <tr class="align-top">
                                    <td><b class="sr-only">Warnings:</b></td>
                                    <td>
                                      <ul class="text-sm">
                                        {%- for warning in how_to_use.value.warnings -%}
                                          <li class="mb-2 last:mb-0"><em>{{ warning }}</em></li>
                                        {%- endfor -%}
                                      </ul>
                                    </td>
                                  </tr>
                                {%- endif -%}
                              </table>
                            {%- elsif product.metafields.custom_fields.how_it_works != blank -%}
                              <div class="p:mb-3">{{ product.metafields.custom_fields.how_it_works }}</div>
                            {%- endif -%}
                          {%- endcapture -%}
                          <div>
                            {{ how_to_html }}
                          </div>
                        {%- endif -%}
                      {%- when 'Custom' -%}
                        <div>{{ block.settings.info_tab_custom_tab_content }}</div>
                      {%- when 'Recycling' -%}
                        <div class="recycling">
                          <table>
                            {%- if product.metafields.custom.recycling.value.packaging != nil -%}
                              <tr class="align-top">
                                <td><b class="mr-1 whitespace-nowrap">Packaging:</b></td>
                                <td>{{ product.metafields.custom.recycling.value.packaging }}</td>
                              </tr>
                            {%- endif -%}
                            {%- if product.metafields.custom.recycling.value.recycling != nil -%}
                              <tr class="align-top">
                                <td><b class="mr-1 whitespace-nowrap">Recycling:</b></td>
                                <td>{{ product.metafields.custom.recycling.value.recycling }}</td>
                              </tr>
                            {%- endif -%}
                          </table>
                          {%- if product.metafields.custom.recycling.value.disclaimer != nil -%}
                            <small class="block leading-tight mt-2">{{ product.metafields.custom.recycling.value.disclaimer }}</small>
                          {%- endif -%}
                        </div>
                      {%- when 'Size Chart' -%}
                        <div>
                          <b class="block mb-2">Unisex fit</b>
                          <table class="border-collapse border border-seaweed-400 bg-wave-200">
                            <thead>
                              <tr>
                                <th class="border border-seaweed-400 px-2 py-0.5 bg-wave-200 leading-none"><span class="sr-only">Size</span></th>
                                <th class="border border-seaweed-400 px-2 py-0.5 bg-wave-200 leading-none">Body Length</th>
                                <th class="border border-seaweed-400 px-2 py-0.5 bg-wave-200 leading-none">Chest Width</th>
                                <th class="border border-seaweed-400 px-2 py-0.5 bg-wave-200 leading-none">Sleeve Length</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr>
                                <td class="bg-wave-200 border border-seaweed-400 px-2 py-0.5 font-bold">XS</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">25.5 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">18 in.<br></td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">23 in.</td>
                              </tr>
                              <tr>
                                <td class="bg-wave-200 border border-seaweed-400 px-2 py-0.5 font-bold">S</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">26.5 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">20 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">23.5 in.</td>
                              </tr>
                              <tr>
                                <td class="bg-wave-200 border border-seaweed-400 px-2 py-0.5 font-bold">M</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">28 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">22 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">24 in.</td>
                              </tr>
                              <tr>
                                <td class="bg-wave-200 border border-seaweed-400 px-2 py-0.5 font-bold">L</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">29 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">24 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">24.5 in.</td>
                              </tr>
                              <tr>
                                <td class="bg-wave-200 border border-seaweed-400 px-2 py-0.5 font-bold">XL</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">30 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">26 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">25 in.</td>
                              </tr>
                              <tr>
                                <td class="bg-wave-200 border border-seaweed-400 px-2 py-0.5 font-bold">2XL</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">31 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">28 in.</td>
                                <td class="border border-seaweed-400 px-2 py-0.5 bg-white">25.5 in.</td>
                              </tr>
                            </tbody>
                          </table>
                        </div>
                    {%- endcase -%}
                  </div>
                {%- endfor -%}
              </tab-controller>
            {%- when 'collapsible_tab' -%}
              {%- if block.settings.content != blank -%}
                <div class="{{ block.settings.tab_classes }}">
                  {%- assign tab_id = "Details-" | append: block.id | append: "-" | append: section.id -%}
                  {%- render 'accordion-item',
                    id: tab_id,
                    summary: block.settings.heading,
                    content: block.settings.content,
                    default_open: block.settings.default_open
                    content_classes: 'max-h-80 overflow-y-auto a:link b:font-bold p:mb-4'
                  -%}
                </div>
              {%- endif -%}
            {%- when 'quantity_selector' -%}
              {%- unless excluded_from_site -%}
                <div class="{{ block.settings.qty_classes }}" {{ block.shopify_attributes }}>
                  <label class="sr-only" for="Quantity-{{ section.id }}">
                    {{ 'products.product.quantity.label' | t }}
                  </label>
                  <quantity-input class="quantity pdp-quantity inline-flex border border-seaweed-400 rounded-md w-full">
                    <button
                      class="{{ quantity_classes }} rounded-l-md"
                      name="minus"
                      type="button"
                    >
                      <span class="sr-only">{{ 'products.product.quantity.decrease' | t: product: product.title | escape }}</span>
                      {% render 'icon-minus', classes: 'h-5 w-5 text-seaweed-700 pointer-events-none', stroke_width: 2, aria_hidden: true %}
                    </button>
                    <input
                      class="quantity__input w-8 h-10 border-0 py-1 px-0 text-xl grow text-center"
                      type="number"
                      name="quantity"
                      id="Quantity-{{ section.id }}"
                      min="1"
                      value="1"
                      form="{{ product_form_id }}"
                    >
                    <button
                      class="{{ quantity_classes }} rounded-r-md"
                      name="plus"
                      type="button"
                    >
                      <span class="sr-only">{{ 'products.product.quantity.increase' | t: product: product.title | escape }}</span>
                      {% render 'icon-plus', classes: 'h-5 w-5 text-seaweed-700 pointer-events-none', stroke_width: 2, aria_hidden: true %}
                    </button>
                  </quantity-input>
                </div>
