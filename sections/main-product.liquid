    },
    {
      "type": "buy_buttons",
      "name": "t:sections.main-product.blocks.buy_buttons.name",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "atc_classes",
          "label": "ATC button classes"
        },
        {
          "type": "checkbox",
          "id": "atc_show_price",
          "label": "Show price in button"
        }
      ]
    },
    {
      "type": "description",
