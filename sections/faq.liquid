<div class="accordion-group">
  <h1 class="sr-only">
    {{ page.title | escape }}
  </h1>
  <div class="container mx-auto px-6 my-12 flex flex-col sm:flex-row gap-6 items-start">
    <aside class="w-1/4 bg-wave-100 p-6">
      {%- for block in section.blocks -%}
        <a class="font-book tracking-wide">{{ section.settings.accordion_group_heading }}</a>
      {%- endfor -%}
    </aside>
    <article class="w-3/4">
      <h2 class="text-xl sm:text-2xl tracking-wide font-medium mb-4">{{ section.settings.accordion_group_heading }}</h2>
      {%- for block in section.blocks -%}
        {% render 'accordion',
          id: "Details-{{ section.id }}-{{ block.id }}",
          summary: block.settings.accordion_summary,
          content: block.settings.accordion_content %}
      {%- endfor -%}
    </article>
  </div>
</div>

{% schema %}
{
  "name": "FAQ",
  "tag": "section",
  "settings": [
  ],
  "blocks": [
    {
      "type": "accordion",
      "name": "Accordion",
      "settings": [
        {
          "type": "text",
          "id": "accordion_group",
          "label": "Group name",
          "info": "Any accordions with this group name will be combined "
        },
        {
          "type": "html",
          "id": "accordion_summary",
          "label": "Summary"
        },
        {
          "type": "html",
          "id": "accordion_content",
          "label": "Content"
        }
      ]
    }
  ]
}
{% endschema %}
