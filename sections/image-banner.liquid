{% schema %}
{
  "name": "t:sections.image-banner.name",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Banner settings"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "info": "Recommended image size: 800 x 1000px (height is flexible)",
      "label": "Image (mobile)"
    },
    {
      "type": "image_picker",
      "id": "image",
      "info": "Recommended image size: 1600 x 800px (height is flexible)",
      "label": "Image (desktop)"
    },
    {
      "type": "checkbox",
      "id": "is_lazy",
      "label": "Lazy load image"
    },
    {
      "type": "url",
      "id": "image_link",
      "label": "Image link"
    },
    {
      "type": "textarea",
      "default": "container px-0 xs:px-6",
      "id": "banner_classes",
      "label": "Wrapper classes"
    },
    {
      "type": "textarea",
      "default": "w-full",
      "id": "image_classes",
      "label": "Image classes"
    },
    {
      "type": "header",
      "content": "Text block settings"
    },
    {
      "type": "textarea",
      "default": "max-w-md top-1/3",
      "id": "text_block_classes",
      "label": "Text block classes"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "html",
          "id": "heading",
          "label": "Heading text"
        },
        {
          "type": "textarea",
          "id": "heading_classes",
          "label": "Heading classes"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "html",
          "id": "paragraph",
          "label": "Paragraph text"
        },
        {
          "type": "textarea",
          "id": "paragraph_classes",
          "label": "Paragraph classes"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Shop now",
          "label": "Button label"
        },
        {
          "type": "text",
          "id": "button_aria_label",
          "label": "ARIA label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "target_blank",
          "label": "Open in new tab"
        },
        {
          "type": "textarea",
          "id": "button_classes",
          "default": "button-primary",
          "label": "Button classes"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-banner.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "paragraph"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
