<div class="{{ section.settings.section_classes }}">
  <div class="{{ section.settings.container_classes }}">
    {%- if section.settings.image != blank -%}
      <picture>
        {%- if section.settings.image_desktop == blank -%}
          <source
            srcset="{{ section.settings.image | image_url: width: 800 }} 1x,
              {{ section.settings.image | image_url: width: 1600 }} 2x"
            media="(min-width: 640px)"
          >
        {%- else -%}
          <source
            srcset="{{ section.settings.image_desktop | image_url: width: 800 }} 1x,
              {{ section.settings.image_desktop | image_url: width: 1600 }} 2x"
            media="(min-width: 640px)"
          >
        {%- endif %}
        <source
          srcset="{{ section.settings.image | image_url: width: 400 }} 1x,
            {{ section.settings.image | image_url: width: 800 }} 2x"
          media="(min-width: 0)"
        >
        <img
          srcset="{{ section.settings.image | image_url: width: 400 }} 1x,
            {{ section.settings.image | image_url: width: 800 }} 2x"
          src="{{ section.settings.image | image_url: width: 800 }}"
          loading="lazy"
          alt="{{ section.settings.image.alt | escape }}"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio }}"
          class="{{ section.settings.image_classes }}"
        >
      </picture>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Timeline",
  "tag": "section",
  "settings": [
    {
      "default": "Our Timeline",
      "id": "title",
      "label": "Title",
      "type": "text"
    },
    {
      "id": "section_classes",
      "label": "Section classes",
      "type": "textarea"
    },
    {
      "id": "container_classes",
      "label": "Container classes",
      "type": "textarea"
    }
  ],
  "blocks": [
    {
      "name": "Event",
      "type": "row",
      "settings": [
        {
          "content": "Image settings",
          "type": "header"
        },
        {
          "id": "image",
          "info": "Image size: 800w",
          "label": "Image",
          "type": "image_picker"
        },
        {
          "id": "image_classes",
          "label": "Image classes",
          "type": "textarea"
        },
        {
          "content": "Text settings",
          "type": "header"
        },
        {
          "id": "date",
          "label": "Date",
          "type": "text"
        },
        {
          "id": "heading",
          "info": "This field takes HTML",
          "label": "Heading text",
          "type": "html"
        },
        {
          "id": "paragraph",
          "info": "This field takes HTML",
          "label": "Paragraph text",
          "type": "html"
        },
        {
          "content": "Block settings",
          "type": "header"
        }
      ]
    }
  ],
  "presets": [
